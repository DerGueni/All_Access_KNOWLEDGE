        function openMAAdressen() {
            // Öffnet das MA Adressen Formular mit aktueller MA-ID
            const maId = state.currentRecord?.ID;
            if (maId) {
                if (window.chrome && window.chrome.webview) {
                    Bridge.navigate('frm_MA_Adressen', { MA_ID: maId });
