        // ============================================
        // TAB-FUNKTIONEN
        // ============================================
        async function loadEinsaetze() {
            const maId = state.currentRecord?.ID;
            if (!maId) return;
            try {
                const result = await apiCall(`/mitarbeiter/${maId}/einsaetze?limit=50`);
                const tbody = document.getElementById('einsaetzeTbody');
                tbody.innerHTML = '';
                (result.data || []).forEach(e => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `<td>${formatDate(e.Datum)}</td><td>${e.Auftrag || ''}</td><td>${e.Objekt || ''}</td><td>${e.Von || ''}</td><td>${e.Bis || ''}</td><td>${e.Stunden || ''}</td>`;
                    tbody.appendChild(tr);
                });
            } catch (err) {
                console.error('Einsaetze laden:', err);
            }
        }

        async function loadNichtVerfuegbar() {
            const maId = state.currentRecord?.ID;
            if (!maId) return;
            try {
                const result = await apiCall(`/mitarbeiter/${maId}/nichtverfuegbar`);
                const tbody = document.getElementById('nvTbody');
                tbody.innerHTML = '';
                (result.data || []).forEach(nv => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `<td>${formatDate(nv.VonDat)}</td><td>${formatDate(nv.BisDat)}</td><td>${nv.Grund || ''}</td><td>${nv.Bemerkung || ''}</td>`;
                    tr.onclick = () => tr.classList.toggle('selected');
