    <!-- WebView2 Bridge für Access-Integration -->
    <script src="../js/webview2-bridge.js"></script>

    <script>
        // ============================================
        // NAVIGATION HANDLER
        // ============================================
        document.addEventListener('DOMContentLoaded', function() {
            const menuButtons = document.querySelectorAll('.menu-btn');

            menuButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetForm = this.getAttribute('data-form');

                    // Loading Overlay anzeigen
                    document.getElementById('loadingOverlay').classList.add('show');

                    // Navigation zum Formular
                    if (targetForm) {
                        // Über WebView2 Bridge zu Access navigieren
                        if (window.Bridge) {
                            Bridge.sendEvent('navigate', { form: targetForm });
                        } else {
                            // Fallback: Direkter Link
                            const formUrl = `${targetForm}.html`;
                            window.location.href = formUrl;
                        }
                    }
                });
            });
        });

        // ============================================
        // DATUM INITIALISIERUNG
        // ============================================
        function initializeDates() {
            const today = new Date();
            const formatDate = (date) => date.toISOString().split('T')[0];

            // Startdatum auf heute setzen
            document.getElementById('dtStartdatum').value = formatDate(today);

            // Enddatum auf 7 Tage später setzen
            const endDate = new Date(today);
            endDate.setDate(endDate.getDate() + 7);
            document.getElementById('dtEnddatum').value = formatDate(endDate);

            // Datum Label aktualisieren
            updateDatumLabel();

            // Tages-Header initialisieren
            updateDayHeaders(today);
        }

        function updateDatumLabel() {
            const now = new Date();
            const options = { day: '2-digit', month: '2-digit', year: 'numeric' };
            document.getElementById('lbl_Datum').textContent = now.toLocaleDateString('de-DE', options);
        }

        function updateDayHeaders(startDate) {
            const weekdays = ['Sonntag', 'Montag', 'Dienstag', 'Mittwoch', 'Donnerstag', 'Freitag', 'Samstag'];

            for (let i = 0; i < 7; i++) {
                const date = new Date(startDate);
                date.setDate(date.getDate() + i);

                const dayName = weekdays[date.getDay()];
                const dateStr = `${date.getDate().toString().padStart(2, '0')}.${(date.getMonth() + 1).toString().padStart(2, '0')}`;

                const label = document.getElementById(`lbl_Tag_${i + 1}`);
                if (label) {
                    label.textContent = `${dayName} ${dateStr}`;
                }
            }
        }

        // ============================================
        // BUTTON EVENT HANDLERS
        // ============================================

        // Schließen Button
        document.getElementById('Befehl37').addEventListener('click', function() {
            if (window.Bridge) {
                Bridge.sendEvent('close');
            } else {
                window.close();
            }
        });

        // Datums-Navigation
        document.getElementById('btnVor').addEventListener('click', function() {
            const dateInput = document.getElementById('dtStartdatum');
            const currentDate = new Date(dateInput.value);
            currentDate.setDate(currentDate.getDate() + 7);
            dateInput.value = currentDate.toISOString().split('T')[0];
            updateDayHeaders(currentDate);
            loadDienstplaene();
        });

        document.getElementById('btnrueck').addEventListener('click', function() {
            const dateInput = document.getElementById('dtStartdatum');
            const currentDate = new Date(dateInput.value);
            currentDate.setDate(currentDate.getDate() - 7);
            dateInput.value = currentDate.toISOString().split('T')[0];
            updateDayHeaders(currentDate);
            loadDienstplaene();
        });

        document.getElementById('btn_Heute').addEventListener('click', function() {
            const today = new Date();
            document.getElementById('dtStartdatum').value = today.toISOString().split('T')[0];
            updateDayHeaders(today);
            loadDienstplaene();
        });

        document.getElementById('btnStartdatum').addEventListener('click', function() {
            const dateInput = document.getElementById('dtStartdatum');
            const selectedDate = new Date(dateInput.value);
            updateDayHeaders(selectedDate);
            loadDienstplaene();
        });

        // Startdatum Change Event
        document.getElementById('dtStartdatum').addEventListener('change', function() {
            const selectedDate = new Date(this.value);
            updateDayHeaders(selectedDate);
            loadDienstplaene();
        });

        // MA Filter Change Event
        document.getElementById('NurAktiveMA').addEventListener('change', function() {
            loadDienstplaene();
        });

