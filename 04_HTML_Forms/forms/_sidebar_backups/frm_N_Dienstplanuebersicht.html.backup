            const container = document.getElementById('sub_DP_Grund');
            container.innerHTML = '<div class="loading">Lade Dienstpläne...</div>';

            const startDate = document.getElementById('dtStartdatum').value;
            const filter = document.getElementById('NurAktiveMA').value;

            if (window.Bridge) {
                Bridge.loadData('dienstplan', {
                    startDate: startDate,
                    filter: filter
                });
            } else {
                // Fallback: Demo-Daten
                setTimeout(() => {
                    renderDemoData(container);
                }, 500);
            }
        }

