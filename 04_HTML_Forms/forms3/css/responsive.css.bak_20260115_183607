        left: auto !important;
        right: auto !important;
    }

    /* Top Offsets entfernen */
    .top-minus-5,
    .top-0,
    .top-25 {
        top: auto !important;
    }

    /* Margins minimieren */
    .ml-100,
    .ml-15,
    .ml-10,
    .ml-5 {
        margin-left: 0 !important;
    }

    /* Form-Section: 1 Spalte */
    .form-section {
        grid-template-columns: 1fr !important;
        gap: 10px !important;
    }

    /* Buttons-Grid: 2 Spalten */
    .buttons-grid {
        grid-template-columns: repeat(2, 1fr) !important;
    }

    /* Alle Widths: 100% */
    .w-205,
    .w-184,
    .w-180,
    .w-110,
    .w-100 {
        width: 100% !important;
        max-width: 100%;
    }

    .w-95,
