/* Position Offset Classes */
.offset-left-xs { position: relative; left: -50px; }
.offset-left-sm { position: relative; left: -115px; }
.offset-left-md { position: relative; left: -150px; }
.offset-left-lg { position: relative; left: -214px; }
.offset-left-xl { position: relative; left: -675px; }
.offset-right-sm { position: relative; right: 115px; }
.offset-right-md { position: relative; right: 600px; }
.offset-right-lg { position: relative; right: 890px; }

/* Width Utility Classes */
.w-60 { width: 60px; }
.w-80 { width: 80px; }
.w-83 { width: 83px; }
.w-95 { width: 95px; }
.w-100 { width: 100px; }
.w-110 { width: 110px; }
.w-180 { width: 180px; }
.w-184 { width: 184px; }
.w-205 { width: 205px; }
.w-full { width: 100%; }

/* Height Utility Classes */
.h-20 { height: 20px; }
.h-23 { height: 23px; }
.h-26 { height: 26px; }

/* Margin Utility Classes */
.ml-auto { margin-left: auto; }
.ml-5 { margin-left: 5px; }
.ml-10 { margin-left: 10px; }
.ml-15 { margin-left: 15px; }
.ml-100 { margin-left: 100px; }
.mt-4 { margin-top: 4px; }
.mt-5 { margin-top: 5px; }
.mt-25 { margin-top: 25px; }

/* Top Offset Classes */
.top-minus-5 { position: relative; top: -5px; }
.top-0 { position: relative; top: 0; }
.top-25 { position: relative; top: 25px; }

/* Responsive Auftragstamm Layout */

/* Desktop: 1200px - 1599px (Kompakter) */
@media (min-width: 1200px) and (max-width: 1599px) {
    .offset-left-sm { left: -80px; }
    .offset-left-md { left: -100px; }
    .offset-left-lg { left: -150px; }
    .offset-left-xl { left: -500px; }
    .offset-right-md { right: 500px; }
    .offset-right-lg { right: 750px; }
    .ml-100 { margin-left: 60px; }
}

/* Tablet: 768px - 1199px */
@media (max-width: 1199px) {
    /* ALLE Offsets entfernen */
    .offset-left-xs,
    .offset-left-sm,
    .offset-left-md,
    .offset-left-lg,
    .offset-left-xl,
    .offset-right-sm,
    .offset-right-md,
    .offset-right-lg {
        left: 0 !important;
        right: 0 !important;
    }

    /* Margins reduzieren */
    .ml-100 { margin-left: 20px; }
    .ml-15 { margin-left: 10px; }

    /* Form-Section: 2 Spalten */
    .form-section {
        grid-template-columns: 1fr 1fr !important;
        gap: 15px !important;
    }

    /* Buttons-Grid: 4 Spalten */
    .buttons-grid {
        grid-template-columns: repeat(4, minmax(100px, 1fr)) !important;
    }

    /* Flexible Widths */
    .w-205,
    .w-184,
    .w-180 {
        width: 100%;
        max-width: 205px;
    }
}

/* Mobile: < 768px */
@media (max-width: 767px) {
    /* ALLE Offsets entfernen */
    .offset-left-xs,
    .offset-left-sm,
    .offset-left-md,
    .offset-left-lg,
