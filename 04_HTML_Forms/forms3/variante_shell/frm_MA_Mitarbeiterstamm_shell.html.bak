    <script>
        'use strict';

        const API_BASE = 'http://localhost:5000/api';

        // State
        const state = {
            mitarbeiterList: [],
            currentIndex: 0,
            currentRecord: null
        };

        // Initialize
        document.addEventListener('DOMContentLoaded', async function() {
            document.getElementById('lblDatum').textContent = formatDate(new Date());

            // Tab-Wechsel
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    switchTab(this.dataset.tab);
                });
            });

            // Search & Filter
            document.getElementById('searchInput').addEventListener('input', renderMitarbeiterList);
            document.getElementById('filterSelect').addEventListener('change', loadMitarbeiter);

            // Daten laden
            await loadMitarbeiter();
            hideLoading();
        });

        // Navigation
        function navFirst() { showRecord(0); }
        function navPrev() { showRecord(Math.max(0, state.currentIndex - 1)); }
        function navNext() { showRecord(Math.min(state.mitarbeiterList.length - 1, state.currentIndex + 1)); }
        function navLast() { showRecord(state.mitarbeiterList.length - 1); }

        async function loadMitarbeiter() {
            showLoading();
            try {
                const filter = document.getElementById('filterSelect').value;
                let url = `${API_BASE}/mitarbeiter`;
                if (filter === 'aktiv') url += '?aktiv=true';
                else if (filter === 'inaktiv') url += '?aktiv=false';

                const response = await fetch(url);
                const result = await response.json();
                state.mitarbeiterList = result.data || [];

                renderMitarbeiterList();

                if (state.mitarbeiterList.length > 0) {
                    await showRecord(0);
                }
            } catch (e) {
                console.error('Mitarbeiter laden fehlgeschlagen:', e);
            }
            hideLoading();
        }

        function renderMitarbeiterList() {
            const tbody = document.getElementById('maListBody');
            const search = document.getElementById('searchInput').value.toLowerCase();
            tbody.innerHTML = '';

            state.mitarbeiterList.forEach((ma, index) => {
                const name = (ma.Nachname || '') + ' ' + (ma.Vorname || '');
                if (search && !name.toLowerCase().includes(search)) return;

                const tr = document.createElement('tr');
                tr.dataset.index = index;
                if (index === state.currentIndex) {
                    tr.classList.add('selected');
                }
                tr.innerHTML = `
                    <td>${escapeHtml(ma.Nachname || '')}</td>
                    <td>${escapeHtml(ma.Vorname || '')}</td>
                    <td>${escapeHtml(ma.Ort || '')}</td>
                `;
                tr.addEventListener('click', () => showRecord(index));
                tbody.appendChild(tr);
            });
        }

        async function showRecord(index) {
            if (index < 0 || index >= state.mitarbeiterList.length) return;
            state.currentIndex = index;
            state.currentRecord = state.mitarbeiterList[index];

            // Formular befÃ¼llen
            document.getElementById('displayNachname').textContent = state.currentRecord.Nachname || '-';
            document.getElementById('displayVorname').textContent = state.currentRecord.Vorname || '-';
            document.getElementById('maNr').value = state.currentRecord.ID || '';

            // Alle Felder mit data-field befÃ¼llen
            document.querySelectorAll('[data-field]').forEach(el => {
                const field = el.dataset.field;
                let value = state.currentRecord[field] || '';

                if (el.type === 'checkbox') {
                    el.checked = !!value;
                } else if (el.type === 'date' && value) {
                    el.value = value.substring(0, 10);
                } else {
                    el.value = value;
                }
            });

            // Liste aktualisieren
            renderMitarbeiterList();
        }

        function switchTab(tabName) {
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.toggle('active', btn.dataset.tab === tabName);
            });
            document.querySelectorAll('.tab-page').forEach(page => {
                page.classList.toggle('active', page.id === 'tab-' + tabName);
            });
        }

        function neuerMitarbeiter() {
            alert('Neuer Mitarbeiter erstellen...');
        }

        function mitarbeiterLÃ¶schen() {
            if (confirm('Mitarbeiter wirklich lÃ¶schen?')) {
                alert('LÃ¶schen...');
            }
        }

        function speichern() {
            alert('Speichern...');
        }

        function refreshData() {
            loadMitarbeiter();
        }

        function openMAAdressen() {
            notifyParent('NAVIGATE', 'frm_MA_Adressen_shell');
        }

        function openZeitkonto() {
            notifyParent('NAVIGATE', 'frm_MA_Zeitkonten');
        }

        function openDienstplan() {
            notifyParent('NAVIGATE', 'frm_DP_Dienstplan_MA');
        }

        function openEinsatzÃ¼bersicht() {
            notifyParent('NAVIGATE', 'frm_EinsatzÃ¼bersicht');
        }

        function openMaps() {
            const koord = state.currentRecord?.Koordinaten;
            if (koord) {
                window.open(`https://www.google.com/maps?q=${koord}`, '_blank');
            }
        }

        function minimizeForm() {
            notifyParent('MINIMIZE');
        }

        function closeForm() {
            notifyParent('CLOSE');
        }

        // Communicate with parent shell
        function notifyParent(type, data) {
            if (window.parent !== window) {
                window.parent.postMessage({
                    type: type,
                    formName: typeof data === 'string' ? data : undefined,
                    data: typeof data === 'object' ? data : undefined
                }, '*');
            }
        }

        // Listen to messages from parent
        window.addEventListener('message', function(event) {
            const data = event.data;

            if (data.type === 'LOAD_DATA') {
                if (data.ma_id) {
                    loadMitarbeiterById(data.ma_id);
                }
            }
        });

        async function loadMitarbeiterById(id) {
            try {
                const response = await fetch(`${API_BASE}/mitarbeiter/${id}`);
                const result = await response.json();
                state.currentRecord = result.data?.mitarbeiter || result.data;
                // Formular befÃ¼llen...
            } catch (e) {
                console.error('Mitarbeiter laden:', e);
            }
        }

        function formatDate(date) {
            if (!date) return '';
            const d = new Date(date);
            return d.toLocaleDateString('de-DE');
        }

        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function showLoading() {
            document.getElementById('loadingOverlay').classList.add('active');
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').classList.remove('active');
        }

        console.log('[Mitarbeiterstamm Shell] Form loaded');
    </script>
    <!-- API-Server Lifecycle (fuer Standalone-Test) -->
    <script src="../../js/api-lifecycle.js"></script>
</body>
