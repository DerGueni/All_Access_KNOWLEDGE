<Page
    x:Class="ConsysWinUI.Views.KundenstammView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ConsysWinUI.ViewModels"
    mc:Ignorable="d"
    Background="#F0F0F0">

    <Page.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#A05050"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#95B3D7"/>
            <Setter Property="Foreground" Value="#404040"/>
            <Setter Property="Width" Value="134"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#7F7F7F"/>
        </Style>

        <Style x:Key="LightBlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DCE6F2"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="Width" Value="134"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#7F7F7F"/>
        </Style>

        <Style x:Key="AccessLabelStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="109"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#000000"/>
        </Style>

        <Style x:Key="AccessTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="288"/>
            <Setter Property="Height" Value="21"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#404040"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#7F7F7F"/>
        </Style>

        <Style x:Key="HeaderLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#7F7F7F"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="207"/>
            <ColumnDefinition Width="929"/>
            <ColumnDefinition Width="447"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" BorderBrush="Black" BorderThickness="1" Margin="8,10" Padding="8,3">
                    <TextBlock Text="HAUPTMENÜ" Foreground="Black" FontWeight="Bold" FontSize="11" HorizontalAlignment="Center"/>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Button Content="Dienstplanübersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                        <Button Content="Planungsübersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                        <Button Content="Auftragsverwaltung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2" Background="#D4A574" Foreground="Black"/>
                        <Button Content="Mitarbeiterverwaltung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                        <Button Content="Offene Mail Anfragen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                        <Button Content="Excel Zeitkonten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                        <Button Content="Zeitkonten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                        <Button Content="Abwesenheitsplanung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                        <Button Content="Dienstausweis erstellen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- HAUPTBEREICH MIT TABCONTROL -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="73"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER BEREICH -->
            <Grid Grid.Row="0" Background="White">
                <TextBox x:Name="kun_firma" Text="{x:Bind ViewModel.KunFirma, Mode=TwoWay}"
                         Width="502" Height="26" FontSize="11"
                         Canvas.Left="291" Canvas.Top="7"
                         HorizontalAlignment="Left" VerticalAlignment="Top"
                         Margin="81,7,0,0"/>

                <TextBox x:Name="kun_ID" Text="{x:Bind ViewModel.KunId, Mode=TwoWay}"
                         Width="113" Height="21" FontSize="11"
                         HorizontalAlignment="Left" VerticalAlignment="Top"
                         Margin="784,3,0,0" IsEnabled="False"/>

                <Button Content="Datensatz löschen" Style="{StaticResource BlueButtonStyle}"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Margin="25,3,0,0"/>

                <Button Content="Auswertung" Style="{StaticResource BlueButtonStyle}"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Margin="697,4,0,0"/>

                <Button Content="Umsatz" Style="{StaticResource BlueButtonStyle}"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Margin="697,34,0,0"/>

                <Button Content="PDF Aufträge" Style="{StaticResource LightBlueButtonStyle}"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Margin="25,34,0,0"/>

                <TextBox x:Name="kun_bezeichnung" Text="{x:Bind ViewModel.KunFirma, Mode=TwoWay}"
                         Width="502" Height="29" FontSize="11"
                         HorizontalAlignment="Left" VerticalAlignment="Top"
                         Margin="81,34,0,0"/>

                <CheckBox x:Name="kun_IstAktiv" IsChecked="{x:Bind ViewModel.KunIstAktiv, Mode=TwoWay}"
                          Width="19" Height="20"
                          HorizontalAlignment="Left" VerticalAlignment="Top"
                          Margin="131,48,0,0"/>
            </Grid>

            <!-- TABCONTROL -->
            <Border Grid.Row="1" Background="#D9D9D9" BorderThickness="1" BorderBrush="#7F7F7F">
                <TabView Background="#D9D9D9" VerticalAlignment="Stretch">
                    <!-- TAB: STAMMDATEN -->
                    <TabViewItem Header="Stammdaten">
                        <ScrollViewer>
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Firma -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,8">
                                    <TextBlock Text="Firma" Style="{StaticResource AccessLabelStyle}"/>
                                    <TextBox x:Name="kun_Firma_Stamm" Text="{x:Bind ViewModel.KunFirma, Mode=TwoWay}" Style="{StaticResource AccessTextBoxStyle}"/>
                                </StackPanel>

                                <!-- Ansprechpartner -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8">
                                    <TextBlock Text="Ansprechpartner" Style="{StaticResource AccessLabelStyle}"/>
                                    <TextBox x:Name="kun_ansprechpartner" Text="{x:Bind ViewModel.KunAnsprechpartner, Mode=TwoWay}" Style="{StaticResource AccessTextBoxStyle}"/>
                                </StackPanel>

                                <!-- Straße -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8">
                                    <TextBlock Text="Straße" Style="{StaticResource AccessLabelStyle}"/>
                                    <TextBox x:Name="kun_strasse" Text="{x:Bind ViewModel.KunStrasse, Mode=TwoWay}" Style="{StaticResource AccessTextBoxStyle}"/>
                                </StackPanel>

                                <!-- PLZ / Ort -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8">
                                    <TextBlock Text="PLZ / Ort" Style="{StaticResource AccessLabelStyle}"/>
                                    <TextBox x:Name="kun_plz" Text="{x:Bind ViewModel.KunPlz, Mode=TwoWay}" Width="53" Height="21" FontSize="11" Margin="0,0,5,0"/>
                                    <TextBox x:Name="kun_ort" Text="{x:Bind ViewModel.KunOrt, Mode=TwoWay}" Width="235" Height="21" FontSize="11"/>
                                </StackPanel>

                                <!-- Land -->
                                <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,8">
                                    <TextBlock Text="Land" Style="{StaticResource AccessLabelStyle}"/>
                                    <TextBox x:Name="kun_Land" Text="{x:Bind ViewModel.KunLand, Mode=TwoWay}" Width="288" Height="21" FontSize="11"/>
                                </StackPanel>

                                <!-- Telefon -->
                                <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,8">
                                    <TextBlock Text="Telefon" Style="{StaticResource AccessLabelStyle}"/>
                                    <TextBox x:Name="kun_telefon" Text="{x:Bind ViewModel.KunTelefon, Mode=TwoWay}" Style="{StaticResource AccessTextBoxStyle}"/>
                                </StackPanel>

                                <!-- Fax -->
                                <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,8">
                                    <TextBlock Text="Fax" Style="{StaticResource AccessLabelStyle}"/>
                                    <TextBox x:Name="kun_fax" Text="{x:Bind ViewModel.KunFax, Mode=TwoWay}" Style="{StaticResource AccessTextBoxStyle}"/>
                                </StackPanel>

                                <!-- Email -->
                                <StackPanel Grid.Row="7" Orientation="Horizontal" Margin="0,8">
                                    <TextBlock Text="E-Mail" Style="{StaticResource AccessLabelStyle}"/>
                                    <TextBox x:Name="kun_email" Text="{x:Bind ViewModel.KunEmail, Mode=TwoWay}" Style="{StaticResource AccessTextBoxStyle}"/>
                                </StackPanel>

                                <!-- URL -->
                                <StackPanel Grid.Row="8" Orientation="Horizontal" Margin="0,8">
                                    <TextBlock Text="Homepage" Style="{StaticResource AccessLabelStyle}"/>
                                    <TextBox x:Name="kun_Website" Text="{x:Bind ViewModel.KunWebsite, Mode=TwoWay}" Style="{StaticResource AccessTextBoxStyle}"/>
                                </StackPanel>

                                <!-- USt-ID -->
                                <StackPanel Grid.Row="9" Orientation="Horizontal" Margin="0,8">
                                    <TextBlock Text="USt-ID" Style="{StaticResource AccessLabelStyle}"/>
                                    <TextBox x:Name="kun_UstId" Text="{x:Bind ViewModel.KunUstId, Mode=TwoWay}" Width="288" Height="20" FontSize="11"/>
                                </StackPanel>

                                <!-- Zahlungsziel -->
                                <StackPanel Grid.Row="10" Orientation="Horizontal" Margin="0,8">
                                    <TextBlock Text="Zahlungsziel (Tage)" Style="{StaticResource AccessLabelStyle}"/>
                                    <TextBox x:Name="kun_Zahlbed" Text="{x:Bind ViewModel.ZahlungszielText, Mode=TwoWay}" Width="60" Height="20" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </TabViewItem>

                    <!-- TAB: PREISE -->
                    <TabViewItem Header="Preise">
                        <Grid Background="White">
                            <TextBlock Text="Standardpreise werden hier angezeigt" Margin="20"/>
                        </Grid>
                    </TabViewItem>

                    <!-- TAB: AUFTRÄGE -->
                    <TabViewItem Header="Aufträge">
                        <Grid Background="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8" Spacing="8">
                                <Button Content="Auftrag PDF" Style="{StaticResource BlueButtonStyle}" Width="129" Height="22"/>
                                <Button Content="Rechnung PDF" Style="{StaticResource BlueButtonStyle}" Width="129" Height="22"/>
                                <Button Content="Einsatz PDF" Style="{StaticResource BlueButtonStyle}" Width="129" Height="22"/>
                            </StackPanel>

                            <Border Grid.Row="1" Background="White" BorderBrush="#7F7F7F" BorderThickness="1" Margin="8">
                                <TextBlock Text="Auftragsliste wird hier angezeigt" Margin="20"/>
                            </Border>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8">
                                <TextBlock Text="Positionssumme:" Style="{StaticResource HeaderLabelStyle}" Margin="0,0,8,0"/>
                                <TextBox x:Name="PosGesamtsumme" IsReadOnly="True" Width="154" Height="21" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </TabViewItem>

                    <!-- TAB: RECHNUNGEN -->
                    <TabViewItem Header="Rechnungen">
                        <Grid Background="White">
                            <TextBlock Text="Rechnungen werden hier angezeigt" Margin="20"/>
                        </Grid>
                    </TabViewItem>

                    <!-- TAB: ANHÄNGE -->
                    <TabViewItem Header="Anhänge">
                        <Grid Background="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Content="Neuer Anhang" Style="{StaticResource BlueButtonStyle}" Width="211" Height="22" Margin="8"/>
                            <Border Grid.Row="1" Background="White" BorderBrush="#7F7F7F" BorderThickness="1" Margin="8">
                                <TextBlock Text="Anhangsliste wird hier angezeigt" Margin="20"/>
                            </Border>
                        </Grid>
                    </TabViewItem>

                    <!-- TAB: ANSPRECHPARTNER -->
                    <TabViewItem Header="Ansprechpartner">
                        <Grid Background="White">
                            <TextBlock Text="Ansprechpartner werden hier angezeigt" Margin="20"/>
                        </Grid>
                    </TabViewItem>

                    <!-- TAB: BEMERKUNG -->
                    <TabViewItem Header="Bemerkung">
                        <Grid Background="White" Margin="8">
                            <TextBox x:Name="kun_memo"
                                     Text="{x:Bind ViewModel.KunBemerkung, Mode=TwoWay}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalAlignment="Stretch"
                                     HorizontalAlignment="Stretch"
                                     FontSize="11"
                                     Foreground="#404040"
                                     Background="White"/>
                        </Grid>
                    </TabViewItem>
                </TabView>
            </Border>
        </Grid>

        <!-- KUNDENLISTE RECHTS -->
        <Border Grid.Column="2" Background="White" BorderBrush="#7F7F7F" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Suchbereich -->
                <Grid Grid.Row="0" Background="#F0F0F0" Margin="4">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Schnellsuche:" VerticalAlignment="Center" FontSize="11"/>
                        <ComboBox x:Name="Textschnell" Width="140" Height="21" FontSize="11"/>
                        <ComboBox x:Name="cbo_Auswahl" Width="137" Height="21" FontSize="11"/>
                    </StackPanel>

                    <CheckBox x:Name="NurAktiveKD" Content="nur aktive anzeigen"
                              HorizontalAlignment="Right" VerticalAlignment="Center"
                              FontSize="11" Margin="0,0,8,0"/>
                </Grid>

                <!-- Kundenliste -->
                <ListBox Grid.Row="1" x:Name="lst_KD"
                         ItemsSource="{x:Bind ViewModel.KundenListe, Mode=OneWay}"
                         SelectedItem="{x:Bind ViewModel.SelectedKunde, Mode=TwoWay}"
                         Background="White"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="local:KundenListItem">
                            <Grid Padding="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{x:Bind Firma}" FontWeight="SemiBold" FontSize="11"/>
                                <TextBlock Grid.Row="1" Text="{x:Bind Ort}" Foreground="#7F7F7F" FontSize="10"/>
                                <TextBlock Grid.Row="2" Text="{x:Bind Kontaktname}" Foreground="#404040" FontSize="10" FontStyle="Italic"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Page>
