<Page
    x:Class="ConsysWinUI.Views.LohnabrechnungenView"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConsysWinUI.Views"
    xmlns:vm="using:ConsysWinUI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F0F0F0">

    <!-- Lohnabrechnungen - Access Original: frm_N_Lohnabrechnungen -->

    <Page.Resources>
        <!-- Access Original Styles: Label 165px, TextBox 202px, Button 139x23px -->

        <!-- Access TextBox Style -->
        <Style x:Key="AccessTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="202"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="BorderBrush" Value="#A6A6A6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Access ComboBox Style -->
        <Style x:Key="AccessComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#A6A6A6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="MinHeight" Value="23"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Access Button Style (blau) - 139x23px -->
        <Style x:Key="AccessButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="139"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="Background" Value="#95B3D7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#7A97BE"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Access Label Style - 165px -->
        <Style x:Key="AccessLabelStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="165"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style x:Key="DataGridHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,3"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style x:Key="DataGridCellStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,2"/>
        </Style>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="173"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

    </Page.Resources>

    <!-- Hauptgrid mit Sidebar -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185"/>  <!-- Sidebar - Access Original: 185px -->
            <ColumnDefinition Width="*"/>    <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- ============================================ -->
        <!-- SIDEBAR -->
        <!-- ============================================ -->
        <Border Grid.Column="0" Background="#8B0000">
            <StackPanel>
                <!-- Logo/Titel -->
                <Border Background="White" BorderBrush="Black" BorderThickness="1"
                        Margin="8,10" Padding="8,3">
                    <TextBlock Text="HAUPTMENU"
                               Foreground="Black"
                               FontWeight="Bold"
                               FontSize="11"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Menu-Buttons -->
                <Button Content="Dienstplanuebersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                        Command="{x:Bind ViewModel.NavigateToDienstplanCommand, Mode=OneWay}"/>
                <Button Content="Planungsuebersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Auftragsverwaltung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Mitarbeiterstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                        Command="{x:Bind ViewModel.NavigateToMitarbeiterCommand, Mode=OneWay}"/>
                <Button Content="Kundenstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Objektstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Abwesenheiten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                        Command="{x:Bind ViewModel.NavigateToAbwesenheitCommand, Mode=OneWay}"/>
                <Button Content="Zeitkonten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                        Command="{x:Bind ViewModel.NavigateToZeitkontenCommand, Mode=OneWay}"/>
                <Button Content="Lohnabrechnungen" Background="#D4A574" Foreground="Black" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Bewerber" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Einstellungen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
            </StackPanel>
        </Border>

        <!-- ============================================ -->
        <!-- CONTENT AREA -->
        <!-- ============================================ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>   <!-- Header -->
                <RowDefinition Height="Auto"/>   <!-- Filter -->
                <RowDefinition Height="*"/>      <!-- Abrechnungsliste -->
                <RowDefinition Height="Auto"/>   <!-- Statistik -->
                <RowDefinition Height="200"/>    <!-- Stundendetails -->
                <RowDefinition Height="Auto"/>   <!-- Aktionen -->
            </Grid.RowDefinitions>

            <!-- ============================================ -->
            <!-- HEADER -->
            <!-- ============================================ -->
            <Border Grid.Row="0" Background="#4A90A4" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#808080" Width="28" Height="28" Margin="0,0,8,0">
                            <TextBlock Text="EUR" FontSize="10" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Lohnabrechnungen" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ============================================ -->
            <!-- FILTER-BEREICH -->
            <!-- ============================================ -->
            <Border Grid.Row="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Von Datum -->
                    <TextBlock Grid.Column="0" Text="Von:" Style="{StaticResource AccessLabelStyle}" Width="Auto" Margin="0,0,10,0"/>
                    <CalendarDatePicker Grid.Column="1"
                                       Date="{x:Bind ViewModel.VonDatum, Mode=TwoWay}"
                                       DateFormat="{}{day.integer}.{month.integer}.{year.full}"
                                       MinWidth="130"/>

                    <!-- Bis Datum -->
                    <TextBlock Grid.Column="2" Text="Bis:" Style="{StaticResource AccessLabelStyle}" Width="Auto" Margin="15,0,10,0"/>
                    <CalendarDatePicker Grid.Column="3"
                                       Date="{x:Bind ViewModel.BisDatum, Mode=TwoWay}"
                                       DateFormat="{}{day.integer}.{month.integer}.{year.full}"
                                       MinWidth="130"/>

                    <!-- Mitarbeiter Filter -->
                    <TextBlock Grid.Column="4" Text="Mitarbeiter:" Style="{StaticResource AccessLabelStyle}" Width="Auto" Margin="15,0,10,0"/>
                    <ComboBox Grid.Column="5"
                              ItemsSource="{x:Bind ViewModel.MitarbeiterListe, Mode=OneWay}"
                              SelectedValue="{x:Bind ViewModel.SelectedMaId, Mode=TwoWay}"
                              SelectedValuePath="MaId"
                              DisplayMemberPath="DisplayName"
                              Style="{StaticResource AccessComboBoxStyle}"
                              HorizontalAlignment="Stretch"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Column="7" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Aktualisieren" Style="{StaticResource AccessButtonStyle}" Margin="5,0"
                                Command="{x:Bind ViewModel.FilterAktualisierenCommand, Mode=OneWay}"/>
                        <Button Content="Vormonat" Style="{StaticResource AccessButtonStyle}" Margin="5,0"
                                Command="{x:Bind ViewModel.VormonatCommand, Mode=OneWay}"/>
                        <Button Content="Akt. Monat" Style="{StaticResource AccessButtonStyle}" Margin="5,0"
                                Command="{x:Bind ViewModel.AktuellerMonatCommand, Mode=OneWay}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ============================================ -->
            <!-- ABRECHNUNGSLISTE -->
            <!-- ============================================ -->
            <Border Grid.Row="2" Background="White" Margin="10,10,10,0" BorderBrush="#A6A6A6" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#D9D9D9" BorderBrush="#A6A6A6" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>  <!-- Name -->
                                <ColumnDefinition Width="80"/>   <!-- Tage -->
                                <ColumnDefinition Width="100"/>  <!-- Stunden -->
                                <ColumnDefinition Width="80"/>   <!-- Satz -->
                                <ColumnDefinition Width="*"/>    <!-- Brutto -->
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Mitarbeiter" Style="{StaticResource DataGridHeaderStyle}"/>
                            <TextBlock Grid.Column="1" Text="Tage" Style="{StaticResource DataGridHeaderStyle}"/>
                            <TextBlock Grid.Column="2" Text="Stunden" Style="{StaticResource DataGridHeaderStyle}"/>
                            <TextBlock Grid.Column="3" Text="Satz" Style="{StaticResource DataGridHeaderStyle}"/>
                            <TextBlock Grid.Column="4" Text="Brutto" Style="{StaticResource DataGridHeaderStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Daten -->
                    <ListView Grid.Row="1"
                              ItemsSource="{x:Bind ViewModel.Abrechnungen, Mode=OneWay}"
                              SelectedItem="{x:Bind ViewModel.SelectedAbrechnung, Mode=TwoWay}"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:LohnabrechnungItem">
                                <Grid Padding="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{x:Bind DisplayName}" Style="{StaticResource DataGridCellStyle}"/>
                                    <TextBlock Grid.Column="1" Text="{x:Bind AnzahlTage}" Style="{StaticResource DataGridCellStyle}" TextAlignment="Right" Padding="5,2,15,2"/>
                                    <TextBlock Grid.Column="2" Text="{x:Bind StundenText}" Style="{StaticResource DataGridCellStyle}" TextAlignment="Right" Padding="5,2,15,2"/>
                                    <TextBlock Grid.Column="3" Text="{x:Bind Stundensatz}" Style="{StaticResource DataGridCellStyle}" TextAlignment="Right" Padding="5,2,15,2"/>
                                    <TextBlock Grid.Column="4" Text="{x:Bind BruttoText}" Style="{StaticResource DataGridCellStyle}" FontWeight="SemiBold" TextAlignment="Right" Padding="5,2,15,2"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- ============================================ -->
            <!-- STATISTIK -->
            <!-- ============================================ -->
            <Border Grid.Row="3" Background="#E8F4E8" Margin="10,0,10,0" BorderBrush="#A6A6A6" BorderThickness="1,0,1,1" Padding="10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Mitarbeiter:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.AnzahlMitarbeiter, Mode=OneWay}" FontWeight="Bold" VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2" Text="Gesamtstunden:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,5,0"/>
                    <TextBlock Grid.Column="3" Text="{x:Bind ViewModel.GesamtStundenText, Mode=OneWay}" FontWeight="Bold" VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="4" Text="Durchschnitt/MA:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,5,0"/>
                    <TextBlock Grid.Column="5" Text="{x:Bind ViewModel.DurchschnittText, Mode=OneWay}" FontWeight="Bold" VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="6" Text="Gesamt Brutto:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,5,0"/>
                    <TextBlock Grid.Column="7" Text="{x:Bind ViewModel.GesamtBruttoText, Mode=OneWay}" FontWeight="Bold" Foreground="#228B22" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- ============================================ -->
            <!-- STUNDENDETAILS -->
            <!-- ============================================ -->
            <Border Grid.Row="4" Background="White" Margin="10,10,10,0" BorderBrush="#A6A6A6" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Titel -->
                    <Border Grid.Row="0" Background="#E8E8E8" Padding="5,3">
                        <TextBlock Text="Stundendetails (ausgewaehlter Mitarbeiter)" FontWeight="SemiBold" FontSize="12"/>
                    </Border>

                    <!-- Header -->
                    <Border Grid.Row="1" Background="#D9D9D9" BorderBrush="#A6A6A6" BorderThickness="0,1,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>  <!-- Datum -->
                                <ColumnDefinition Width="100"/>  <!-- Zeit -->
                                <ColumnDefinition Width="200"/>  <!-- Auftrag -->
                                <ColumnDefinition Width="*"/>    <!-- Objekt -->
                                <ColumnDefinition Width="80"/>   <!-- Stunden -->
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Datum" Style="{StaticResource DataGridHeaderStyle}"/>
                            <TextBlock Grid.Column="1" Text="Zeit" Style="{StaticResource DataGridHeaderStyle}"/>
                            <TextBlock Grid.Column="2" Text="Auftrag" Style="{StaticResource DataGridHeaderStyle}"/>
                            <TextBlock Grid.Column="3" Text="Objekt" Style="{StaticResource DataGridHeaderStyle}"/>
                            <TextBlock Grid.Column="4" Text="Stunden" Style="{StaticResource DataGridHeaderStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Daten -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{x:Bind ViewModel.StundenDetails, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:StundenDetailItem">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                        <Grid Background="White">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{x:Bind DatumText}" Style="{StaticResource DataGridCellStyle}"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind ZeitText}" Style="{StaticResource DataGridCellStyle}"/>
                                            <TextBlock Grid.Column="2" Text="{x:Bind Auftrag}" Style="{StaticResource DataGridCellStyle}" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="3" Text="{x:Bind Objekt}" Style="{StaticResource DataGridCellStyle}" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="4" Text="{x:Bind StundenText}" Style="{StaticResource DataGridCellStyle}" FontWeight="SemiBold" TextAlignment="Right" Padding="5,2,15,2"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- ============================================ -->
            <!-- AKTIONEN -->
            <!-- ============================================ -->
            <Border Grid.Row="5" Background="#F5F5F5" Margin="10,10,10,10" Padding="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Excel Export" Style="{StaticResource AccessButtonStyle}" Margin="5,0"
                            Command="{x:Bind ViewModel.ExportExcelCommand, Mode=OneWay}"/>
                    <Button Content="PDF Export" Style="{StaticResource AccessButtonStyle}" Margin="5,0"
                            Command="{x:Bind ViewModel.ExportPdfCommand, Mode=OneWay}"/>
                    <Button Content="Drucken" Style="{StaticResource AccessButtonStyle}" Margin="5,0"
                            Command="{x:Bind ViewModel.DruckenCommand, Mode=OneWay}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
