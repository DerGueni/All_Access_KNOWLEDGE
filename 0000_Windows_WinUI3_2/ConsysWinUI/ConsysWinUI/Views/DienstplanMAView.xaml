<Page
    x:Class="ConsysWinUI.Views.DienstplanMAView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:ConsysWinUI.ViewModels"
    xmlns:controls="using:ConsysWinUI.Controls"
    mc:Ignorable="d"
    Background="#F0F0F0">

    <!-- 1:1 Nachbildung von Access-Formular: frm_DP_Dienstplan_MA -->

    <Page.Resources>
        <!-- Sidebar Button Style - Access-Look -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#A05050"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Export Button Style - Access Rosa/Beige (#D5A5D7) -->
        <!-- Access Original: ca. 146x22px (2184x325 Twips) -->
        <Style x:Key="ExportButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D5A5D7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D5A5D7"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Width" Value="146"/>
            <Setter Property="Height" Value="23"/>
        </Style>

        <!-- Navigation Button Style (Vor/Zurueck) -->
        <!-- Access Original: 38x15px (567x224 Twips) -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="15"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Header Label Style - Access Hellbraun (#C5A565) -->
        <!-- Hinweis: TextBlock hat keine Background-Property, verwende Border für Hintergrund -->
        <Style x:Key="HeaderLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Day Header Style - Access Hellrosa/Beige (#F6D0F2) -->
        <Style x:Key="DayHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185"/>  <!-- Sidebar - Access Original: 185px -->
            <ColumnDefinition Width="*"/>    <!-- Hauptbereich -->
        </Grid.ColumnDefinitions>

        <!-- ============================================ -->
        <!-- SIDEBAR - Dunkelrot (#8B0000) wie Access -->
        <!-- ============================================ -->
        <Border Grid.Column="0" Background="#8B0000">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Logo/Titel - Weiße Box mit schwarzem Rahmen wie Access Original -->
                    <Border Background="White" BorderBrush="Black" BorderThickness="1"
                            Margin="8,10" Padding="8,3">
                        <TextBlock Text="HAUPTMENÜ"
                                   Foreground="Black"
                                   FontWeight="Bold"
                                   FontSize="11"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Menü-Buttons -->
                    <Button Content="Dienstplanübersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                            Background="#D4A574" Foreground="Black"
                            Command="{x:Bind ViewModel.NavigateDienstplanCommand, Mode=OneWay}"/>
                    <Button Content="Planungsübersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                            Command="{x:Bind ViewModel.NavigatePlanungCommand, Mode=OneWay}"/>
                    <Button Content="Auftragsverwaltung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                            Command="{x:Bind ViewModel.NavigateAuftragCommand, Mode=OneWay}"/>
                    <Button Content="Mitarbeiterverwaltung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                            Command="{x:Bind ViewModel.NavigateMitarbeiterCommand, Mode=OneWay}"/>
                    <Button Content="Offene Mail Anfragen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                            Command="{x:Bind ViewModel.NavigateAnfragenCommand, Mode=OneWay}"/>
                    <Button Content="Excel Zeitkonten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                            Command="{x:Bind ViewModel.NavigateExcelZeitkontenCommand, Mode=OneWay}"/>
                    <Button Content="Zeitkonten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                            Command="{x:Bind ViewModel.NavigateZeitkontenCommand, Mode=OneWay}"/>
                    <Button Content="Abwesenheitsplanung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                            Command="{x:Bind ViewModel.NavigateAbwesenheitCommand, Mode=OneWay}"/>
                    <Button Content="Dienstausweis erstellen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                            Command="{x:Bind ViewModel.NavigateDienstausweisCommand, Mode=OneWay}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ============================================ -->
        <!-- HAUPTBEREICH -->
        <!-- ============================================ -->
        <Grid Grid.Column="1" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header mit Titel und Navigation -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="4">
                <TextBlock Text="Dienstplan Mitarbeiter" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="{x:Bind ViewModel.SelectedMitarbeiterName, Mode=OneWay, FallbackValue='Kein Mitarbeiter ausgewählt'}"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Action Buttons - Access Rosa/Beige Style -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Command="{x:Bind ViewModel.OpenMitarbeiterCommand, Mode=OneWay}"
                        Style="{StaticResource ExportButtonStyle}"
                        ToolTipService.ToolTip="Mitarbeiterstamm öffnen">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE8D4;" FontSize="14"/>
                        <TextBlock Text="MA-Stamm"/>
                    </StackPanel>
                </Button>
                <Button Command="{x:Bind ViewModel.ExportCommand, Mode=OneWay}"
                        Style="{StaticResource ExportButtonStyle}"
                        ToolTipService.ToolTip="Exportieren">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xEDE1;" FontSize="14"/>
                        <TextBlock Text="Export"/>
                    </StackPanel>
                </Button>
                <Button Command="{x:Bind ViewModel.PrintCommand, Mode=OneWay}"
                        Style="{StaticResource ExportButtonStyle}"
                        ToolTipService.ToolTip="Drucken">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE749;" FontSize="14"/>
                        <TextBlock Text="Drucken"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Filter-Bereich -->
        <Border Grid.Row="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Mitarbeiter Auswahl -->
                <StackPanel Grid.Column="0" Spacing="4" Margin="0,0,16,0">
                    <TextBlock Text="Mitarbeiter" FontWeight="SemiBold" FontSize="12"/>
                    <ComboBox ItemsSource="{x:Bind ViewModel.MitarbeiterListe, Mode=OneWay}"
                              SelectedValue="{x:Bind ViewModel.SelectedMaId, Mode=TwoWay}"
                              SelectedValuePath="MaId"
                              DisplayMemberPath="DisplayName"
                              PlaceholderText="Mitarbeiter wählen..."
                              Width="250"/>
                </StackPanel>

                <!-- Datum Von -->
                <StackPanel Grid.Column="1" Spacing="4" Margin="0,0,16,0">
                    <TextBlock Text="Von" FontWeight="SemiBold" FontSize="12"/>
                    <DatePicker Date="{x:Bind ViewModel.VonDatum, Mode=TwoWay}"
                                Width="150"
                                DayFormat="{}{day.integer}"
                                MonthFormat="{}{month.abbreviated}"
                                YearFormat="{}{year.full}"/>
                </StackPanel>

                <!-- Datum Bis -->
                <StackPanel Grid.Column="2" Spacing="4" Margin="0,0,16,0">
                    <TextBlock Text="Bis" FontWeight="SemiBold" FontSize="12"/>
                    <DatePicker Date="{x:Bind ViewModel.BisDatum, Mode=TwoWay}"
                                Width="150"
                                DayFormat="{}{day.integer}"
                                MonthFormat="{}{month.abbreviated}"
                                YearFormat="{}{year.full}"/>
                </StackPanel>

                <!-- Spacer -->
                <StackPanel Grid.Column="3"/>

                <!-- Quick Actions -->
                <StackPanel Grid.Column="4" Spacing="4">
                    <TextBlock Text="Schnellzugriff" FontWeight="SemiBold" FontSize="12"/>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Button Command="{x:Bind ViewModel.HeuteCommand, Mode=OneWay}"
                                Content="Heute"
                                Width="77" Height="18"
                                ToolTipService.ToolTip="Heute anzeigen"/>
                        <Button Command="{x:Bind ViewModel.PreviousWeekCommand, Mode=OneWay}"
                                Style="{StaticResource NavButtonStyle}"
                                ToolTipService.ToolTip="Zurück">
                            <FontIcon Glyph="&#xE76B;" FontSize="10"/>
                        </Button>
                        <Button Command="{x:Bind ViewModel.NextWeekCommand, Mode=OneWay}"
                                Style="{StaticResource NavButtonStyle}"
                                ToolTipService.ToolTip="Vor">
                            <FontIcon Glyph="&#xE76C;" FontSize="10"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                BorderBrush="{ThemeResource SystemFillColorAttentionBrush}"
                BorderThickness="1"
                Padding="12,8"
                CornerRadius="4"
                Margin="0,0,0,16"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="16" Height="16"/>
                <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay, FallbackValue='Bereit'}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- View-Toggle -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                <RadioButton Content="Kalender-Ansicht"
                             IsChecked="True"
                             GroupName="ViewMode"
                             Tag="Calendar"
                             Click="ViewMode_Changed"/>
                <RadioButton Content="Listen-Ansicht"
                             GroupName="ViewMode"
                             Tag="List"
                             Click="ViewMode_Changed"/>
            </StackPanel>

            <!-- Kalender Grid -->
            <controls:CalendarGrid x:Name="CalendarGrid"
                                   Grid.Row="1"
                                   Visibility="Visible"
                                   EntryClicked="CalendarGrid_EntryClicked"
                                   DateRangeChanged="CalendarGrid_DateRangeChanged"/>

            <!-- Listen-Ansicht (Original) -->
            <Grid x:Name="ListViewGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Einsätze Liste -->
            <Border Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Einsätze"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,12"/>

                    <ListView Grid.Row="1"
                              ItemsSource="{x:Bind ViewModel.DienstplanEintraege, Mode=OneWay}"
                              SelectedItem="{x:Bind ViewModel.SelectedEintrag, Mode=TwoWay}"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:DienstplanEintragItem">
                                <Grid Padding="12,8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Datum -->
                                    <TextBlock Grid.Column="0"
                                               Text="{x:Bind DatumText}"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>

                                    <!-- Zeit -->
                                    <TextBlock Grid.Column="1"
                                               Text="{x:Bind ZeitText}"
                                               VerticalAlignment="Center"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                    <!-- Auftrag -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind Auftrag}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{x:Bind Veranstalter}"
                                                   FontSize="11"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <!-- Objekt -->
                                    <TextBlock Grid.Column="3"
                                               Text="{x:Bind Objekt}"
                                               VerticalAlignment="Center"/>

                                    <!-- Stunden -->
                                    <TextBlock Grid.Column="4"
                                               Text="{x:Bind StundenText}"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,2"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>

            <!-- Rechte Spalte: Statistik + Abwesenheiten -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Statistik -->
                <Border Grid.Row="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Statistik"
                                   Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <!-- Einsätze -->
                        <StackPanel>
                            <TextBlock Text="Einsätze"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.AnzahlEinsaetze, Mode=OneWay, FallbackValue='0'}"
                                       Style="{StaticResource TitleTextBlockStyle}"/>
                        </StackPanel>

                        <!-- Stunden -->
                        <StackPanel>
                            <TextBlock Text="Stunden gesamt"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.GesamtStundenText, Mode=OneWay, FallbackValue='0.0'}"
                                       Style="{StaticResource TitleTextBlockStyle}"/>
                        </StackPanel>

                        <!-- Tage -->
                        <StackPanel>
                            <TextBlock Text="Arbeitstage"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.AnzahlTage, Mode=OneWay, FallbackValue='0'}"
                                       Style="{StaticResource TitleTextBlockStyle}"/>
                        </StackPanel>

                        <!-- Abwesenheiten -->
                        <StackPanel>
                            <TextBlock Text="Abwesenheiten"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.AnzahlAbwesenheiten, Mode=OneWay, FallbackValue='0'}"
                                       Style="{StaticResource TitleTextBlockStyle}"
                                       Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Abwesenheiten Liste -->
                <Border Grid.Row="2"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Abwesenheiten"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,12"/>

                        <ListView Grid.Row="1"
                                  ItemsSource="{x:Bind ViewModel.Abwesenheiten, Mode=OneWay}"
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:AbwesenheitEintragItem">
                                    <Grid Padding="8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Grund -->
                                        <TextBlock Grid.Row="0"
                                                   Text="{x:Bind Grund}"
                                                   FontWeight="SemiBold"/>

                                        <!-- Zeitraum -->
                                        <TextBlock Grid.Row="1"
                                                   FontSize="11"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                            <Run Text="{x:Bind VonDatText}"/>
                                            <Run Text=" - "/>
                                            <Run Text="{x:Bind BisDatText}"/>
                                            <Run Text=" ("/>
                                            <Run Text="{x:Bind AnzahlTage}"/>
                                            <Run Text=" Tage)"/>
                                        </TextBlock>

                                        <!-- Bemerkung -->
                                        <TextBlock Grid.Row="2"
                                                   Text="{x:Bind Bemerkung}"
                                                   FontSize="11"
                                                   TextWrapping="Wrap"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Visibility="{x:Bind Bemerkung, Converter={StaticResource NullToVisibilityConverter}}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,4"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>
            </Grid>
        </Grid>
        </Grid>
    </Grid>
</Page>
