<Page
    x:Class="ConsysWinUI.Views.ObjektstammView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ConsysWinUI.ViewModels"
    mc:Ignorable="d"
    Background="#F0F0F0">

    <Page.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#A05050"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#95B3D7"/>
            <Setter Property="Foreground" Value="#404040"/>
            <Setter Property="BorderBrush" Value="#95B3D7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="#404040"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#A6A6A6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="215"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#8B0000">
            <StackPanel>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Dienstplanübersicht"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Planungsübersicht"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Auftragsverwaltung"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Mitarbeiterstamm"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Kundenstamm"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Objektstamm" Background="#D4A574"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Abwesenheiten"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Zeitkonten"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Lohnabrechnungen"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Bewerber"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Einstellungen"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="775"/>
            </Grid.ColumnDefinitions>

            <!-- Left/Center: Form Fields and TabControl -->
            <Grid Grid.Column="0" Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Navigation und Buttons -->
                <Grid Grid.Row="0" Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Navigation Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="2">
                        <Button Command="{x:Bind ViewModel.NavigateFirstCommand, Mode=OneWay}" Width="31" Height="25" Padding="0">
                            <FontIcon Glyph="&#xE892;" FontSize="12"/>
                        </Button>
                        <Button Command="{x:Bind ViewModel.NavigatePreviousCommand, Mode=OneWay}" Width="31" Height="25" Padding="0">
                            <FontIcon Glyph="&#xE76B;" FontSize="12"/>
                        </Button>
                        <Button Command="{x:Bind ViewModel.NavigateNextCommand, Mode=OneWay}" Width="31" Height="25" Padding="0">
                            <FontIcon Glyph="&#xE76C;" FontSize="12"/>
                        </Button>
                        <Button Command="{x:Bind ViewModel.NavigateLastCommand, Mode=OneWay}" Width="31" Height="25" Padding="0">
                            <FontIcon Glyph="&#xE893;" FontSize="12"/>
                        </Button>
                    </StackPanel>

                    <!-- Buttons rechts -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="4">
                        <Button Style="{StaticResource BlueButtonStyle}" Width="153" Height="22" Content="Löschen"/>
                        <Button Width="153" Height="22" Content="Neu Veranst"/>
                        <Button Style="{StaticResource BlueButtonStyle}" Width="153" Height="22" Content="Report"/>
                    </StackPanel>
                </Grid>

                <!-- Form Fields und TabControl -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Row 0: Objekt + ID -->
                    <Grid Grid.Row="0" Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="56"/>
                            <ColumnDefinition Width="211"/>
                            <ColumnDefinition Width="39"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="115"/>
                            <ColumnDefinition Width="154"/>
                            <ColumnDefinition Width="46"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Objekt:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Column="1" Text="{x:Bind ViewModel.Objekt, Mode=TwoWay, FallbackValue=''}" Style="{StaticResource TextBoxStyle}" Width="211"/>
                        <TextBox Grid.Column="2" Text="{x:Bind ViewModel.ObjektId, Mode=TwoWay, FallbackValue=0}" Style="{StaticResource TextBoxStyle}" Width="39" IsEnabled="False" Margin="10,0,0,0"/>

                        <TextBlock Grid.Column="4" Text="Aufträge:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Column="5" Text="{x:Bind ViewModel.AnzahlAuftraege, Mode=OneWay}" Style="{StaticResource TextBoxStyle}" Width="60" IsEnabled="False"/>
                        <TextBlock Grid.Column="6" Text="Schichten:" Style="{StaticResource LabelStyle}" Margin="8,0,0,0" Width="50"/>
                        <TextBox Grid.Column="7" Text="{x:Bind ViewModel.AnzahlSchichten, Mode=OneWay}" Style="{StaticResource TextBoxStyle}" Width="46" Margin="8,0,0,0" IsEnabled="False"/>
                    </Grid>

                    <!-- Row 1: Strasse -->
                    <Grid Grid.Row="1" Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="56"/>
                            <ColumnDefinition Width="253"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="115"/>
                            <ColumnDefinition Width="256"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Strasse:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Column="1" Text="{x:Bind ViewModel.ObjektStrasse, Mode=TwoWay, FallbackValue=''}" Style="{StaticResource TextBoxStyle}" Width="253"/>

                        <TextBlock Grid.Column="3" Text="Aktiv:" Style="{StaticResource LabelStyle}"/>
                        <CheckBox Grid.Column="4" IsChecked="{x:Bind ViewModel.IstAktiv, Mode=TwoWay}" Width="30"/>
                    </Grid>

                    <!-- Row 2: PLZ + Ort -->
                    <Grid Grid.Row="2" Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="56"/>
                            <ColumnDefinition Width="66"/>
                            <ColumnDefinition Width="181"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="115"/>
                            <ColumnDefinition Width="256"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="PLZ:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Column="1" Text="{x:Bind ViewModel.ObjektPlz, Mode=TwoWay, FallbackValue=''}" Style="{StaticResource TextBoxStyle}" Width="66"/>
                        <TextBox Grid.Column="2" Text="{x:Bind ViewModel.ObjektOrt, Mode=TwoWay, FallbackValue=''}" Style="{StaticResource TextBoxStyle}" Width="181" Margin="7,0,0,0"/>

                        <TextBlock Grid.Column="4" Text="Veranstalter:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Grid.Column="5" SelectedValue="{x:Bind ViewModel.VeranstalterId, Mode=TwoWay}" ItemsSource="{x:Bind ViewModel.KundenListe, Mode=OneWay}" DisplayMemberPath="Firma" SelectedValuePath="Id" Width="256"/>
                    </Grid>

                    <!-- TabControl -->
                    <Border Grid.Row="4"
                            Background="#D9D9D9"
                            BorderBrush="#558ED5"
                            BorderThickness="1"
                            Width="771"
                            Height="381"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10,20,0,0">
                        <TabView>
                            <TabViewItem Header="Positionen">
                                <Grid Background="#FFFFFF" Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Button Grid.Row="0"
                                            Style="{StaticResource BlueButtonStyle}"
                                            Content="Neu Attach"
                                            Width="147"
                                            Height="25"
                                            HorizontalAlignment="Left"
                                            Margin="5,5,0,10"/>

                                    <!-- Positionen SubForm Platzhalter -->
                                    <Border Grid.Row="1"
                                            Background="#FFFFFF"
                                            BorderBrush="#A6A6A6"
                                            BorderThickness="1">
                                        <TextBlock Text="sub_OB_Objekt_Positionen"
                                                   Foreground="#999999"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </TabViewItem>

                            <TabViewItem Header="Anhänge">
                                <Grid Background="#FFFFFF" Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Button Grid.Row="0"
                                            Style="{StaticResource BlueButtonStyle}"
                                            Content="Neu Attach"
                                            Width="147"
                                            Height="25"
                                            HorizontalAlignment="Left"
                                            Margin="5,5,0,10"/>

                                    <!-- Anhänge SubForm Platzhalter -->
                                    <Border Grid.Row="1"
                                            Background="#FFFFFF"
                                            BorderBrush="#A6A6A6"
                                            BorderThickness="1">
                                        <TextBlock Text="sub_ZusatzDateien"
                                                   Foreground="#999999"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </TabViewItem>
                        </TabView>
                    </Border>
                </Grid>
            </Grid>

            <!-- Right: Objektliste -->
            <Border Grid.Column="1"
                    Background="#FFFFFF"
                    BorderBrush="#A6A6A6"
                    BorderThickness="1"
                    Width="775"
                    Height="498"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0,8,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Objektliste"
                               Foreground="#000000"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="8,8,8,8"/>

                    <ListView Grid.Row="1"
                              ItemsSource="{x:Bind ViewModel.ObjektListe, Mode=OneWay}"
                              SelectedItem="{x:Bind ViewModel.SelectedObjekt, Mode=TwoWay}"
                              SelectionMode="Single"
                              Background="#FFFFFF"
                              Foreground="#404040">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:ObjektListItem">
                                <Grid Padding="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="{x:Bind Objektname}"
                                               FontWeight="SemiBold"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Row="1"
                                               Text="{x:Bind Ort}"
                                               Foreground="#666666"
                                               FontSize="10"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
