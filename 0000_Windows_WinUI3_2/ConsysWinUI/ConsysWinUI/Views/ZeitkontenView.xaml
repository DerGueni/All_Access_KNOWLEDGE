<Page
    x:Class="ConsysWinUI.Views.ZeitkontenView"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConsysWinUI.Views"
    xmlns:vm="using:ConsysWinUI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F0F0F0">

    <!-- Zeitkontenverwaltung - Arbeitsstunden-Übersicht -->

    <Page.Resources>
        <!-- Access TextBox Style -->
        <Style x:Key="AccessTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#A6A6A6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Access ComboBox Style -->
        <Style x:Key="AccessComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#A6A6A6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Access Button Style (blau) -->
        <Style x:Key="AccessBlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#95B3D7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#7A97BE"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Access Label Style -->
        <Style x:Key="AccessLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style x:Key="DataGridHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,3"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style x:Key="DataGridCellStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,2"/>
        </Style>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

    </Page.Resources>

    <!-- Äußeres Grid mit Sidebar -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185"/>  <!-- Sidebar - Access Original: 185px -->
            <ColumnDefinition Width="*"/>    <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- ============================================ -->
        <!-- SIDEBAR -->
        <!-- ============================================ -->
        <Border Grid.Column="0" Background="#8B0000">
            <StackPanel>
                <!-- Logo/Titel - KRITISCH: Weiße Box mit schwarzem Rahmen wie Access Original -->
                <Border Background="White" BorderBrush="Black" BorderThickness="1"
                        Margin="8,10" Padding="8,3">
                    <TextBlock Text="HAUPTMENÜ"
                               Foreground="Black"
                               FontWeight="Bold"
                               FontSize="11"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Menü-Buttons -->
                <Button Content="Dienstplanübersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Planungsübersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Auftragsverwaltung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Mitarbeiterstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Kundenstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Objektstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Abwesenheiten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Zeitkonten" Background="#D4A574" Foreground="Black" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Lohnabrechnungen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Bewerber" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Einstellungen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
            </StackPanel>
        </Border>

        <!-- ============================================ -->
        <!-- CONTENT AREA -->
        <!-- ============================================ -->
        <Grid Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Header -->
            <RowDefinition Height="Auto"/>   <!-- Filter -->
            <RowDefinition Height="*"/>      <!-- Monatsübersicht -->
            <RowDefinition Height="Auto"/>   <!-- Summen -->
            <RowDefinition Height="200"/>    <!-- Korrekturbuchungen -->
            <RowDefinition Height="Auto"/>   <!-- Neue Buchung -->
        </Grid.RowDefinitions>

        <!-- ============================================ -->
        <!-- HEADER -->
        <!-- ============================================ -->
        <Border Grid.Row="0" Background="#6B4D8C" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>  <!-- Icon + Titel -->
                    <ColumnDefinition Width="*"/>     <!-- Spacer -->
                </Grid.ColumnDefinitions>

                <!-- Icon und Titel -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#808080" Width="28" Height="28" Margin="0,0,8,0">
                        <TextBlock Text="⏱" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Zeitkonten" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- FILTER-BEREICH -->
        <!-- ============================================ -->
        <Border Grid.Row="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Mitarbeiter-Auswahl -->
                <TextBlock Grid.Column="0" Text="Mitarbeiter:" Style="{StaticResource AccessLabelStyle}" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="1"
                          ItemsSource="{x:Bind ViewModel.Mitarbeiter, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedMitarbeiter, Mode=TwoWay}"
                          DisplayMemberPath="Name"
                          Style="{StaticResource AccessComboBoxStyle}"
                          HorizontalAlignment="Stretch"/>

                <!-- Jahr-Filter -->
                <TextBlock Grid.Column="2" Text="Jahr:" Style="{StaticResource AccessLabelStyle}" Margin="20,0,10,0"/>
                <ComboBox Grid.Column="3"
                          ItemsSource="{x:Bind ViewModel.Jahre, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedJahr, Mode=TwoWay}"
                          Style="{StaticResource AccessComboBoxStyle}"
                          HorizontalAlignment="Stretch"/>

                <!-- Aktualisieren Button -->
                <Button Grid.Column="4"
                        Content="Aktualisieren"
                        Command="{x:Bind ViewModel.AktualisierenCommand, Mode=OneWay}"
                        Style="{StaticResource AccessBlueButtonStyle}"
                        Margin="15,0,0,0"/>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- MONATSÜBERSICHT (DataGrid) -->
        <!-- ============================================ -->
        <Border Grid.Row="2" Background="White" Margin="10,10,10,0" BorderBrush="#A6A6A6" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Header -->
                    <RowDefinition Height="*"/>      <!-- Daten -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#D9D9D9" BorderBrush="#A6A6A6" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>  <!-- Monat -->
                            <ColumnDefinition Width="100"/>  <!-- Soll -->
                            <ColumnDefinition Width="100"/>  <!-- Ist -->
                            <ColumnDefinition Width="100"/>  <!-- Differenz -->
                            <ColumnDefinition Width="*"/>    <!-- Saldo kumuliert -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Monat" Style="{StaticResource DataGridHeaderStyle}"/>
                        <TextBlock Grid.Column="1" Text="Soll (Std)" Style="{StaticResource DataGridHeaderStyle}"/>
                        <TextBlock Grid.Column="2" Text="Ist (Std)" Style="{StaticResource DataGridHeaderStyle}"/>
                        <TextBlock Grid.Column="3" Text="Differenz" Style="{StaticResource DataGridHeaderStyle}"/>
                        <TextBlock Grid.Column="4" Text="Saldo kumuliert" Style="{StaticResource DataGridHeaderStyle}"/>
                    </Grid>
                </Border>

                <!-- Daten -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.Monate, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:ZeitkontoMonat">
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                    <Grid Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{x:Bind MonatName}" Style="{StaticResource DataGridCellStyle}"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind SollStunden}" Style="{StaticResource DataGridCellStyle}" TextAlignment="Right" Padding="5,2,15,2"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind IstStunden}" Style="{StaticResource DataGridCellStyle}" TextAlignment="Right" Padding="5,2,15,2"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind Differenz}" Foreground="{x:Bind DifferenzFarbe}"
                                                   FontWeight="SemiBold" TextAlignment="Right" Padding="5,2,15,2"
                                                   FontSize="11" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind SaldoKumuliert}" Style="{StaticResource DataGridCellStyle}" TextAlignment="Right" Padding="5,2,15,2"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- SUMMENZEILE -->
        <!-- ============================================ -->
        <Border Grid.Row="3" Background="#FFF8DC" Margin="10,0,10,0" BorderBrush="#A6A6A6" BorderThickness="1,0,1,1" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Gesamt:" FontWeight="Bold" Style="{StaticResource DataGridCellStyle}"/>
                <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.GesamtSoll, Mode=OneWay}" FontWeight="Bold" Style="{StaticResource DataGridCellStyle}" TextAlignment="Right" Padding="5,2,15,2"/>
                <TextBlock Grid.Column="2" Text="{x:Bind ViewModel.GesamtIst, Mode=OneWay}" FontWeight="Bold" Style="{StaticResource DataGridCellStyle}" TextAlignment="Right" Padding="5,2,15,2"/>
                <TextBlock Grid.Column="3" Text="{x:Bind ViewModel.GesamtDifferenz, Mode=OneWay}" FontWeight="Bold" Style="{StaticResource DataGridCellStyle}" TextAlignment="Right" Padding="5,2,15,2"/>
                <TextBlock Grid.Column="4" Text="{x:Bind ViewModel.EndSaldo, Mode=OneWay}" FontWeight="Bold" Style="{StaticResource DataGridCellStyle}" TextAlignment="Right" Padding="5,2,15,2"/>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- KORREKTURBUCHUNGEN -->
        <!-- ============================================ -->
        <Border Grid.Row="4" Background="White" Margin="10,10,10,0" BorderBrush="#A6A6A6" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Titel -->
                    <RowDefinition Height="Auto"/>  <!-- Header -->
                    <RowDefinition Height="*"/>      <!-- Daten -->
                </Grid.RowDefinitions>

                <!-- Titel -->
                <Border Grid.Row="0" Background="#E8E8E8" Padding="5,3">
                    <TextBlock Text="Korrekturbuchungen" FontWeight="SemiBold" FontSize="12"/>
                </Border>

                <!-- Header -->
                <Border Grid.Row="1" Background="#D9D9D9" BorderBrush="#A6A6A6" BorderThickness="0,1,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>  <!-- Datum -->
                            <ColumnDefinition Width="100"/>  <!-- Stunden -->
                            <ColumnDefinition Width="150"/>  <!-- Art -->
                            <ColumnDefinition Width="*"/>    <!-- Bemerkung -->
                            <ColumnDefinition Width="80"/>   <!-- Löschen -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Datum" Style="{StaticResource DataGridHeaderStyle}"/>
                        <TextBlock Grid.Column="1" Text="Stunden" Style="{StaticResource DataGridHeaderStyle}"/>
                        <TextBlock Grid.Column="2" Text="Art" Style="{StaticResource DataGridHeaderStyle}"/>
                        <TextBlock Grid.Column="3" Text="Bemerkung" Style="{StaticResource DataGridHeaderStyle}"/>
                        <TextBlock Grid.Column="4" Text="" Style="{StaticResource DataGridHeaderStyle}"/>
                    </Grid>
                </Border>

                <!-- Daten -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.Buchungen, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:ZkBuchung">
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                    <Grid Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{x:Bind DatumText}" Style="{StaticResource DataGridCellStyle}"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind StundenText}" Foreground="{x:Bind StundenFarbe}"
                                                   FontWeight="SemiBold" TextAlignment="Right" Padding="5,2,15,2"
                                                   FontSize="11" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind Buchungsart}" Style="{StaticResource DataGridCellStyle}"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind Bemerkung}" Style="{StaticResource DataGridCellStyle}" TextTrimming="CharacterEllipsis"/>
                                        <Button Grid.Column="4" Content="Löschen"
                                                Command="{Binding ElementName=RootPage, Path=ViewModel.BuchungLoeschenCommand}"
                                                CommandParameter="{x:Bind}"
                                                Background="#EF4444" Foreground="White"
                                                FontSize="10" Padding="8,2" Margin="5,2"
                                                CornerRadius="0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- NEUE BUCHUNG -->
        <!-- ============================================ -->
        <Border Grid.Row="5" Background="#FFFACD" Margin="10,10,10,10" BorderBrush="#A6A6A6" BorderThickness="1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Neue Korrektur:" FontWeight="SemiBold" Style="{StaticResource AccessLabelStyle}" Margin="0,0,15,0"/>

                <TextBlock Grid.Column="0" Text="Datum:" Style="{StaticResource AccessLabelStyle}" Margin="110,0,5,0"/>
                <CalendarDatePicker Grid.Column="1"
                                   Date="{x:Bind ViewModel.NeueBuchungDatum, Mode=TwoWay}"
                                   DateFormat="{}{day.integer}.{month.integer}.{year.full}"
                                   MinWidth="130"/>

                <TextBlock Grid.Column="2" Text="Stunden:" Style="{StaticResource AccessLabelStyle}" Margin="10,0,5,0"/>
                <TextBox Grid.Column="3" Text="{x:Bind ViewModel.NeueBuchungStunden, Mode=TwoWay}" Style="{StaticResource AccessTextBoxStyle}"/>

                <TextBlock Grid.Column="4" Text="Art:" Style="{StaticResource AccessLabelStyle}" Margin="10,0,5,0"/>
                <ComboBox Grid.Column="5"
                          ItemsSource="{x:Bind ViewModel.Buchungsarten, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.NeueBuchungArt, Mode=TwoWay}"
                          Style="{StaticResource AccessComboBoxStyle}"
                          HorizontalAlignment="Stretch"/>

                <TextBlock Grid.Column="6" Text="Bemerkung:" Style="{StaticResource AccessLabelStyle}" Margin="10,0,5,0"/>
                <TextBox Grid.Column="7" Text="{x:Bind ViewModel.NeueBuchungBemerkung, Mode=TwoWay}" Style="{StaticResource AccessTextBoxStyle}"/>

                <Button Grid.Column="8"
                        Content="Buchung hinzufügen"
                        Command="{x:Bind ViewModel.BuchungHinzufuegenCommand, Mode=OneWay}"
                        Style="{StaticResource AccessBlueButtonStyle}"
                        Margin="10,0,0,0"/>
            </Grid>
        </Border>
        </Grid>
        <!-- Ende Content Grid -->
    </Grid>
    <!-- Ende Äußeres Grid mit Sidebar -->
</Page>
