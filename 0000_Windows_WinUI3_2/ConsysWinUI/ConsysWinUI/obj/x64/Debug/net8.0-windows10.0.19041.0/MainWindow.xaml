<Window
    x:Class="ConsysWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="CONSYS Planungssystem">

    <Grid>
        <NavigationView x:ConnectionId='2'
            x:Name="NavigationViewControl"
            IsBackButtonVisible="Auto"
            IsBackEnabled="False"
            IsSettingsVisible="False"
                                                        
                                                    
            PaneDisplayMode="Left"
            IsTabStop="False">

            <NavigationView.MenuItems>
                <!-- Dashboard -->
                <NavigationViewItem Content="Dashboard" Tag="Dashboard">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE10F;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!-- Stammdaten -->
                <NavigationViewItemHeader Content="Stammdaten"/>

                <NavigationViewItem Content="Mitarbeiter" Tag="Mitarbeiter">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE716;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Kunden" Tag="Kunden">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE77B;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Objekte" Tag="Objekte">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE80F;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Auftraege" Tag="Auftraege">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8F1;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!-- Planung -->
                <NavigationViewItemHeader Content="Planung"/>

                <NavigationViewItem Content="Dienstplan (MA)" Tag="DienstplanMA">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE787;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Dienstplan (Objekt)" Tag="DienstplanObjekt">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE163;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Schnellauswahl" Tag="Schnellauswahl">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8C8;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!-- Personal -->
                <NavigationViewItemHeader Content="Personal"/>

                <NavigationViewItem Content="Bewerber" Tag="Bewerber">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8FA;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Abwesenheit" Tag="Abwesenheit">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE787;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Zeitkonten" Tag="Zeitkonten">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE823;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Lohnabrechnungen" Tag="Lohnabrechnungen">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8C7;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!-- System -->
                <NavigationViewItemHeader Content="System"/>

                <NavigationViewItem Content="Einstellungen" Tag="Einstellungen">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE713;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Breadcrumb / Page Title -->
                <Border
                    Grid.Row="0"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="24,12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock x:ConnectionId='4'
                            x:Name="PageTitleText"
                            Text="Dashboard"
                            Style="{StaticResource TitleTextBlockStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Content Frame -->
                <Frame x:ConnectionId='3'
                    x:Name="ContentFrame"
                    Grid.Row="1"
                    Padding="24"
                    IsNavigationStackEnabled="True"
                                                      >
                    <Frame.ContentTransitions>
                        <TransitionCollection>
                            <NavigationThemeTransition>
                                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                    <EntranceNavigationTransitionInfo/>
                                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
                            </NavigationThemeTransition>
                        </TransitionCollection>
                    </Frame.ContentTransitions>
                </Frame>
            </Grid>
        </NavigationView>
    </Grid>
</Window>

