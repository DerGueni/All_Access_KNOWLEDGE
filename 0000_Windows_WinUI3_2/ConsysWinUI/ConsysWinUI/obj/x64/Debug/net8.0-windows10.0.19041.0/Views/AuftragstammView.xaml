<Page
    x:Class="ConsysWinUI.Views.AuftragstammView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F0F0F0">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR (Links) -->
        <Border Grid.Column="0" Background="#8B0000">
            <StackPanel>
                <Border Background="White" BorderBrush="Black" BorderThickness="1" Margin="8,10" Padding="8,3">
                    <TextBlock Text="HAUPTMENÜ" Foreground="Black" FontWeight="Bold" FontSize="11" HorizontalAlignment="Center"/>
                </Border>
                <Button Content="Dienstplanübersicht" Margin="5,2" Background="#A05050" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="10,6"/>
                <Button Content="Planungsübersicht" Margin="5,2" Background="#A05050" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="10,6"/>
                <Button Content="Auftragsverwaltung" Margin="5,2" Background="#D4A574" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="10,6"/>
                <Button Content="Mitarbeiterstamm" Margin="5,2" Background="#A05050" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="10,6"/>
                <Button Content="Kundenstamm" Margin="5,2" Background="#A05050" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="10,6"/>
                <Button Content="Objektstamm" Margin="5,2" Background="#A05050" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="10,6"/>
                <Button Content="Abwesenheiten" Margin="5,2" Background="#A05050" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="10,6"/>
                <Button Content="Zeitkonten" Margin="5,2" Background="#A05050" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="10,6"/>
            </StackPanel>
        </Border>

        <!-- HAUPTBEREICH -->
        <Grid Grid.Column="1" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#6B4D8C" Padding="12" Margin="0,0,0,4">
                <TextBlock Text="Auftragsverwaltung" Foreground="White" FontSize="18" FontWeight="Bold"/>
            </Border>

            <!-- Stammdaten -->
            <Border Grid.Row="1" Background="White" Padding="12" Margin="0,0,0,4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Auftrag:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Auftrag, Mode=TwoWay}" Margin="0,0,8,8"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="ID:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding VaId}" IsEnabled="False"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding StatusListe}"
                              SelectedValue="{Binding VaStatus, Mode=TwoWay}"
                              SelectedValuePath="Id" DisplayMemberPath="Bezeichnung"/>
                </Grid>
            </Border>

            <!-- Tab-Control -->
            <Border Grid.Row="2" Background="White" Padding="8">
                <TabView IsAddTabButtonVisible="False" TabWidthMode="SizeToContent">
                    <TabViewItem Header="Einsatzliste">
                        <Grid Padding="8">
                            <TextBlock Text="Einsatzliste - Inhalt wird geladen..."/>
                        </Grid>
                    </TabViewItem>
                    <TabViewItem Header="Antworten ausstehend">
                        <Grid Padding="8">
                            <TextBlock Text="Antworten ausstehend - Inhalt wird geladen..."/>
                        </Grid>
                    </TabViewItem>
                    <TabViewItem Header="Rechnung">
                        <Grid Padding="8">
                            <TextBlock Text="Rechnung - Inhalt wird geladen..."/>
                        </Grid>
                    </TabViewItem>
                    <TabViewItem Header="Bemerkungen">
                        <Grid Padding="8">
                            <TextBox Text="{Binding Bemerkung, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap"/>
                        </Grid>
                    </TabViewItem>
                </TabView>
            </Border>
        </Grid>

        <!-- RECHTE SIDEBAR -->
        <Border Grid.Column="2" Background="White" Margin="4" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Auftragsliste" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                <ListView Grid.Row="1" ItemsSource="{Binding Schichten}" SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayText}" FontSize="11"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Page>

