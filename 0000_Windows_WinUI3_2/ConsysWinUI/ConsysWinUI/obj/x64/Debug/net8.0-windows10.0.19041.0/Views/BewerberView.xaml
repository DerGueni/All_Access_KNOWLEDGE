<Page x:ConnectionId='1'
    x:Class="ConsysWinUI.Views.BewerberView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConsysWinUI.Views"
    xmlns:vm="using:ConsysWinUI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F0F0F0">

    <!-- Bewerber-Verarbeitung (frm_N_MA_Bewerber_Verarbeitung) -->
    <!-- HINWEIS: Die Tabelle tbl_MA_Bewerber existiert noch nicht im Access-Backend! -->
    <!-- Diese View arbeitet mit Platzhalter-Daten zur Demonstration der UI -->

    <Page.Resources>
        <!-- Access TextBox Style -->
        <Style x:Key="AccessTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#A6A6A6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Access ComboBox Style -->
        <Style x:Key="AccessComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#A6A6A6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Access Label Style -->
        <Style x:Key="AccessLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- Access Button Style -->
        <Style x:Key="AccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#95B3D7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#7A97BE"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Sidebar Button Style - Access-Look -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
    </Page.Resources>

    <!-- Äußeres Grid: Sidebar + Content -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185"/>  <!-- Sidebar - Access Original: 185px -->
            <ColumnDefinition Width="*"/>    <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- ============================================ -->
        <!-- SIDEBAR -->
        <!-- ============================================ -->
        <Border Grid.Column="0" Background="#8B0000">
            <StackPanel>
                <!-- Logo/Titel - KRITISCH: Weiße Box mit schwarzem Rahmen wie Access Original -->
                <Border Background="White" BorderBrush="Black" BorderThickness="1"
                        Margin="8,10" Padding="8,3">
                    <TextBlock Text="HAUPTMENÜ"
                               Foreground="Black"
                               FontWeight="Bold"
                               FontSize="11"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Menü-Buttons -->
                <Button Content="Dienstplanübersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Planungsübersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Auftragsverwaltung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Mitarbeiterstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Kundenstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Objektstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Abwesenheiten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Zeitkonten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Lohnabrechnungen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Bewerber" Background="#D4A574" Foreground="Black" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Einstellungen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
            </StackPanel>
        </Border>

        <!-- ============================================ -->
        <!-- CONTENT BEREICH -->
        <!-- ============================================ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="*"/>      <!-- Content -->
                <RowDefinition Height="Auto"/>  <!-- Footer -->
            </Grid.RowDefinitions>

        <!-- ============================================ -->
        <!-- HEADER - Titel und Filter -->
        <!-- ============================================ -->
        <Border Grid.Row="0" Background="#6B4D8C" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>  <!-- Titel -->
                    <ColumnDefinition Width="*"/>     <!-- Spacer -->
                    <ColumnDefinition Width="Auto"/>  <!-- Filter -->
                    <ColumnDefinition Width="Auto"/>  <!-- Suche -->
                    <ColumnDefinition Width="Auto"/>  <!-- Neu-Button -->
                </Grid.ColumnDefinitions>

                <!-- Titel -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#808080" Width="28" Height="28" Margin="0,0,8,0">
                        <TextBlock Text="✔" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Bewerber-Verarbeitung" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>

                <!-- Status-Filter -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                    <TextBlock Text="Status:" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:ConnectionId='34'                                                          
                                                                                           
                              DisplayMemberPath="Bezeichnung"
                              Width="150"
                              Style="{StaticResource AccessComboBoxStyle}"/>
                </StackPanel>

                <!-- Suche -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                    <TextBlock Text="Suche:" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:ConnectionId='32'                                                                                       
                             Width="200"
                             Style="{StaticResource AccessTextBoxStyle}"
                             PlaceholderText="Name, Email..."/>
                    <Button x:ConnectionId='33' Content="Suchen" Width="60" Margin="5,0,0,0"
                                                                                   
                            Style="{StaticResource AccessButtonStyle}"/>
                </StackPanel>

                <!-- Neu-Button -->
                <Button x:ConnectionId='31' Grid.Column="4" Content="Neuer Bewerber"
                                                                                  
                        Background="#CAD9EB" Foreground="Black"
                        FontSize="11" Padding="12,6" Margin="10,0,0,0" CornerRadius="0"
                        BorderThickness="1" BorderBrush="#95B3D7"/>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- CONTENT - Bewerberliste + Detail-Formular -->
        <!-- ============================================ -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>  <!-- Bewerberliste -->
                <ColumnDefinition Width="*"/>    <!-- Detail-Formular -->
            </Grid.ColumnDefinitions>

            <!-- ============================================ -->
            <!-- BEWERBERLISTE LINKS -->
            <!-- ============================================ -->
            <Border Grid.Column="0" BorderBrush="#A6A6A6" BorderThickness="1" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Header -->
                        <RowDefinition Height="*"/>      <!-- Liste -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Background="#D9D9D9" BorderBrush="#A6A6A6" BorderThickness="0,0,0,1" Padding="8,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name" FontSize="11" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="Bewerbungsdatum" FontSize="11" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="2" Text="Status" FontSize="11" FontWeight="SemiBold"/>
                        </Grid>
                    </Border>

                    <!-- Bewerberliste -->
                    <ListView x:ConnectionId='23' Grid.Row="1"
                                                                                    
                                                                                             
                              SelectionMode="Single"
                              Padding="0">
                        <ListView.ItemTemplate>
                            <DataTemplate                                 >
                                <Grid x:ConnectionId='25' Padding="8,6" Background="White">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Name -->
                                    <StackPanel>
                                        <TextBlock x:ConnectionId='29'                          FontSize="12" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock x:ConnectionId='30'                       FontSize="10" Foreground="#606060" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <!-- Datum -->
                                    <TextBlock x:ConnectionId='26' Grid.Column="1"                                 FontSize="10" VerticalAlignment="Center"/>

                                    <!-- Status-Badge -->
                                    <Border x:ConnectionId='27' Grid.Column="2"
                                                                             
                                            Padding="4,2" CornerRadius="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock x:ConnectionId='28'                            FontSize="9" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="MinHeight" Value="50"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>

            <!-- ============================================ -->
            <!-- DETAIL-FORMULAR RECHTS -->
            <!-- ============================================ -->
            <Border Grid.Column="1" BorderBrush="#A6A6A6" BorderThickness="0,1,1,1" Background="White" Margin="0,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                    <StackPanel>
                        <!-- Bewerber-Name Header -->
                        <Border Background="#E8E8E8" Padding="10,8" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock x:ConnectionId='21'                                                 FontSize="16" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="Bewerber-ID:" FontSize="10" Foreground="#606060" Margin="0,0,8,0"/>
                                        <TextBlock x:ConnectionId='22'                                                   FontSize="10" Foreground="#606060"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Status-Badge groß -->
                                <Border Grid.Column="1"
                                        Background="#3B82F6"
                                        Padding="12,6" CornerRadius="4" VerticalAlignment="Center">
                                    <TextBlock x:ConnectionId='20'                                                                      FontSize="12" Foreground="White" FontWeight="SemiBold"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Stammdaten -->
                        <TextBlock Text="Stammdaten" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"/>

                        <!-- Vorname -->
                        <Grid Margin="0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Vorname" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='19' Grid.Column="1" Style="{StaticResource AccessTextBoxStyle}"
                                                                                                                        />
                        </Grid>

                        <!-- Nachname -->
                        <Grid Margin="0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Nachname" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='18' Grid.Column="1" Style="{StaticResource AccessTextBoxStyle}"
                                                                                                                         />
                        </Grid>

                        <!-- Email -->
                        <Grid Margin="0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Email" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='17' Grid.Column="1" Style="{StaticResource AccessTextBoxStyle}"
                                                                                                                      />
                        </Grid>

                        <!-- Telefon -->
                        <Grid Margin="0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Telefon" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='16' Grid.Column="1" Style="{StaticResource AccessTextBoxStyle}"
                                                                                                                        />
                        </Grid>

                        <!-- Bewerbungsdatum -->
                        <Grid Margin="0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Bewerbungsdatum" Style="{StaticResource AccessLabelStyle}"/>
                            <CalendarDatePicker x:ConnectionId='15' Grid.Column="1"
                                                                                                     
                                               DateFormat="{}{day.integer}.{month.integer}.{year.full}"
                                               MinWidth="200"/>
                        </Grid>

                        <!-- Status -->
                        <Grid Margin="0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Status" Style="{StaticResource AccessLabelStyle}"/>
                            <ComboBox x:ConnectionId='14' Grid.Column="1"
                                                                                               
                                                                                                   
                                      DisplayMemberPath="Bezeichnung"
                                      Style="{StaticResource AccessComboBoxStyle}"
                                      Width="200"/>
                        </Grid>

                        <!-- Qualifikation -->
                        <Grid Margin="0,15,0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Qualifikation" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='13' Grid.Row="1" Style="{StaticResource AccessTextBoxStyle}"
                                                                                                                              
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="80"
                                     Margin="0,4,0,0"/>
                        </Grid>

                        <!-- Bemerkung -->
                        <Grid Margin="0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Bemerkung" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='12' Grid.Row="1" Style="{StaticResource AccessTextBoxStyle}"
                                                                                                                          
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="100"
                                     Margin="0,4,0,0"/>
                        </Grid>

                        <!-- Dokumente-Pfad -->
                        <Grid Margin="0,15,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Dokumente" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='11' Grid.Column="1" Style="{StaticResource AccessTextBoxStyle}"
                                                                                                                              />
                            <Button Grid.Column="2" Content="..." Width="30" Height="22" Margin="5,0,0,0"
                                    Background="White" CornerRadius="0" Padding="0"/>
                        </Grid>

                        <!-- HINWEIS: Platzhalter-Daten -->
                        <Border Background="#FFF4E5" BorderBrush="#F59E0B" BorderThickness="1" Padding="12,8" Margin="0,20,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <TextBlock Text="⚠" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="HINWEIS: Platzhalter-Daten" FontWeight="SemiBold" FontSize="13"/>
                                </StackPanel>
                                <TextBlock TextWrapping="Wrap" FontSize="11">
                                    Die Tabelle tbl_MA_Bewerber existiert noch nicht im Access-Backend.
                                    Diese Ansicht arbeitet mit Demo-Daten. Sobald die Tabelle angelegt wurde,
                                    müssen die kommentierten SQL-Queries im ViewModel aktiviert werden.
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- ============================================ -->
        <!-- FOOTER - Aktionsbuttons -->
        <!-- ============================================ -->
        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Buttons links: Bearbeiten/Speichern/Abbrechen -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                    <!-- Bearbeiten-Button -->
                    <Button x:ConnectionId='8' Content="Bearbeiten"
                                                                                 
                            Style="{StaticResource AccessButtonStyle}"
                            Padding="16,6"/>

                    <!-- Speichern-Button -->
                    <Button x:ConnectionId='9' Content="Speichern"
                                                                                 
                            Background="#CAD9EB" Foreground="Black"
                            FontSize="11" Padding="16,6" CornerRadius="0"
                            BorderThickness="1" BorderBrush="#95B3D7"/>

                    <!-- Abbrechen-Button -->
                    <Button x:ConnectionId='10' Content="Abbrechen"
                                                                                   
                            Style="{StaticResource AccessButtonStyle}"
                            Padding="16,6"/>
                </StackPanel>

                <!-- Buttons rechts: Ablehnen, Löschen, Als MA anlegen -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <!-- Ablehnen -->
                    <Button x:ConnectionId='5'                                                        
                            ToolTipService.ToolTip="Bewerber ablehnen"
                            Height="36" Padding="16,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE711;" FontSize="14" Foreground="#EF4444"/>
                            <TextBlock Text="Ablehnen" Foreground="#EF4444"/>
                        </StackPanel>
                    </Button>

                    <!-- Löschen -->
                    <Button x:ConnectionId='6'                                                        
                            ToolTipService.ToolTip="Bewerber löschen"
                            Height="36" Padding="16,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="#C00000"/>
                            <TextBlock Text="Löschen" Foreground="#C00000"/>
                        </StackPanel>
                    </Button>

                    <!-- Als MA anlegen (grün hervorgehoben) -->
                    <Button x:ConnectionId='7'                                                                      
                            ToolTipService.ToolTip="Bewerber als Mitarbeiter anlegen"
                            Background="#22C55E"
                            Foreground="White"
                            Height="36" Padding="16,0"
                            BorderBrush="#16A34A"
                            CornerRadius="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8B7;" FontSize="14" Foreground="White"/>
                            <TextBlock Text="Als MA anlegen" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid x:ConnectionId='2' Grid.RowSpan="3"
              Background="#80000000"
                                                                    >
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressRing x:ConnectionId='3'                                                      Width="60" Height="60" Foreground="White"/>
                <TextBlock x:ConnectionId='4'                                                     
                           Foreground="White"
                           FontSize="14"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        </Grid> <!-- Ende Content Grid -->
    </Grid> <!-- Ende Hauptgrid (Sidebar + Content) -->
</Page>

