<Page x:ConnectionId='1'
    x:Class="ConsysWinUI.Views.DienstplanObjektView"
    x:Name="Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:ConsysWinUI.ViewModels"
    xmlns:controls="using:ConsysWinUI.Controls"
    mc:Ignorable="d"
    Background="#F0F0F0">

    <!-- 1:1 Nachbildung von Access-Formular: frm_DP_Dienstplan_Objekt -->

    <Page.Resources>
        <!-- Sidebar Button Style - Access-Look -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#A05050"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Export Button Style - Access Rosa/Beige (#D5A5D7) -->
        <!-- Access Original: ca. 126x22px (1890x330 Twips) -->
        <Style x:Key="ExportButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D5A5D7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D5A5D7"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Width" Value="126"/>
            <Setter Property="Height" Value="22"/>
        </Style>

        <!-- Navigation Button Style (Vor/Zurueck) -->
        <!-- Access Original: 38x15px (567x224 Twips) -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="15"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Header Label Style - Access Hellbraun (#C5A565) -->
        <!-- Hinweis: TextBlock hat keine Background-Property, verwende Border für Hintergrund -->
        <Style x:Key="HeaderLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Day Header Style - Access Hellrosa/Beige (#F6D0F2) -->
        <Style x:Key="DayHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185"/>  <!-- Sidebar - Access Original: 185px -->
            <ColumnDefinition Width="*"/>    <!-- Hauptbereich -->
        </Grid.ColumnDefinitions>

        <!-- ============================================ -->
        <!-- SIDEBAR - Dunkelrot (#8B0000) wie Access -->
        <!-- ============================================ -->
        <Border Grid.Column="0" Background="#8B0000">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Logo/Titel - Weiße Box mit schwarzem Rahmen wie Access Original -->
                    <Border Background="White" BorderBrush="Black" BorderThickness="1"
                            Margin="8,10" Padding="8,3">
                        <TextBlock Text="HAUPTMENÜ"
                                   Foreground="Black"
                                   FontWeight="Bold"
                                   FontSize="11"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Menü-Buttons -->
                    <Button x:ConnectionId='42' Content="Dienstplanübersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                                                                                               />
                    <Button x:ConnectionId='43' Content="Planungsübersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                            Background="#D4A574" Foreground="Black"
                                                                                            />
                    <Button x:ConnectionId='44' Content="Auftragsverwaltung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                                                                                            />
                    <Button x:ConnectionId='45' Content="Mitarbeiterverwaltung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                                                                                                />
                    <Button x:ConnectionId='46' Content="Offene Mail Anfragen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                                                                                             />
                    <Button x:ConnectionId='47' Content="Excel Zeitkonten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                                                                                                    />
                    <Button x:ConnectionId='48' Content="Zeitkonten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                                                                                               />
                    <Button x:ConnectionId='49' Content="Abwesenheitsplanung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                                                                                                />
                    <Button x:ConnectionId='50' Content="Dienstausweis erstellen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                                                                                                  />
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ============================================ -->
        <!-- HAUPTBEREICH -->
        <!-- ============================================ -->
        <Grid Grid.Column="1" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header mit Titel und Auftrag-Info -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="4">
                <TextBlock Text="Dienstplan Objekt" Style="{StaticResource TitleTextBlockStyle}"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock x:ConnectionId='39'                                                                                                    
                               Style="{StaticResource BodyTextBlockStyle}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="•" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:ConnectionId='40'                                                  
                               Style="{StaticResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="•" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:ConnectionId='41'                                                        
                               Style="{StaticResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>

            <!-- Action Buttons - Access Rosa/Beige Style -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button x:ConnectionId='36'                                                             
                        Style="{StaticResource ExportButtonStyle}"
                        ToolTipService.ToolTip="Auftragstamm öffnen">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE8A5;" FontSize="14"/>
                        <TextBlock Text="Auftrag"/>
                    </StackPanel>
                </Button>
                <Button x:ConnectionId='37'                                                        
                        Style="{StaticResource ExportButtonStyle}"
                        ToolTipService.ToolTip="Exportieren">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xEDE1;" FontSize="14"/>
                        <TextBlock Text="Export"/>
                    </StackPanel>
                </Button>
                <Button x:ConnectionId='38'                                                       
                        Style="{StaticResource ExportButtonStyle}"
                        ToolTipService.ToolTip="Drucken">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE749;" FontSize="14"/>
                        <TextBlock Text="Drucken"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Filter-Bereich -->
        <Border Grid.Row="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Auftrag Auswahl -->
                <StackPanel Grid.Column="0" Spacing="4" Margin="0,0,16,0">
                    <TextBlock Text="Auftrag / Objekt" FontWeight="SemiBold" FontSize="12"/>
                    <ComboBox x:ConnectionId='35'                                                           
                                                                                          
                              SelectedValuePath="VaId"
                              DisplayMemberPath="DisplayName"
                              PlaceholderText="Auftrag wählen..."
                              Width="350"/>
                </StackPanel>

                <!-- Filter: Nur unbesetzte -->
                <CheckBox x:ConnectionId='33' Grid.Column="1"
                          Content="Nur unbesetzte Schichten"
                                                                                   
                                                                                        
                          VerticalAlignment="Bottom"
                          Margin="0,0,16,8"/>

                <!-- Spacer -->
                <StackPanel Grid.Column="2"/>

                <!-- Load Button -->
                <StackPanel Grid.Column="3" Spacing="4">
                    <TextBlock Text=" " FontSize="12"/>
                    <Button x:ConnectionId='34'                                                                
                            Style="{StaticResource AccentButtonStyle}"
                            ToolTipService.ToolTip="Dienstplan laden">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                            <TextBlock Text="Laden"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status + Statistik Bar -->
        <Border Grid.Row="2"
                Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                BorderBrush="{ThemeResource SystemFillColorAttentionBrush}"
                BorderThickness="1"
                Padding="12,8"
                CornerRadius="4"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Loading Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                    <ProgressRing x:ConnectionId='31'                                                      Width="16" Height="16"/>
                    <TextBlock x:ConnectionId='32'                                                                             
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Statistik -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="16">
                    <!-- Schichten -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Schichten:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='30'                                                                          
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- MA Soll -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="MA Soll:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='29'                                                                   
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- MA Ist -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="MA Ist:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='28'                                                                       
                                   FontWeight="Bold"
                                   Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- MA Fehlt -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Fehlen:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='27'                                                                  
                                   FontWeight="Bold"
                                   Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Besetzungsgrad -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Besetzung:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='26'                                                                               
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="%" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- View-Toggle -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                <RadioButton x:ConnectionId='24' Content="Kalender-Ansicht"
                             IsChecked="True"
                             GroupName="ViewMode"
                             Tag="Calendar"
                                                     />
                <RadioButton x:ConnectionId='25' Content="Listen-Ansicht"
                             GroupName="ViewMode"
                             Tag="List"
                                                     />
            </StackPanel>

            <!-- Kalender Grid -->
            <controls:CalendarGrid x:ConnectionId='2' x:Name="CalendarGrid"
                                   Grid.Row="1"
                                   Visibility="Visible"
                                                                           
                                                                                   />

            <!-- Listen-Ansicht (Original) -->
            <Grid x:ConnectionId='3' x:Name="ListViewGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Schichten Liste -->
            <Border Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Schichten"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,12"/>

                    <ListView x:ConnectionId='14' Grid.Row="1"
                                                                                     
                                                                                            
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate                                          >
                                <Grid x:ConnectionId='16' Padding="12,8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Datum -->
                                    <TextBlock x:ConnectionId='17' Grid.Column="0"
                                                                        
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>

                                    <!-- Zeit -->
                                    <TextBlock Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run x:ConnectionId='22'                        />
                                        <Run Text=" - "/>
                                        <Run x:ConnectionId='23'                       />
                                    </TextBlock>

                                    <!-- Bemerkung -->
                                    <TextBlock x:ConnectionId='18' Grid.Column="2"
                                                                        
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- Status -->
                                    <Border Grid.Column="3"
                                            Background="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                        <TextBlock x:ConnectionId='21'                           
                                                   FontSize="11"
                                                   FontWeight="SemiBold"/>
                                    </Border>

                                    <!-- MA Anzahl -->
                                    <StackPanel Grid.Column="4"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center">
                                        <TextBlock x:ConnectionId='19'                            
                                                   FontWeight="Bold"
                                                   FontSize="18"/>
                                        <TextBlock Text=" / "
                                                   FontSize="18"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock x:ConnectionId='20'                         
                                                   FontSize="18"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,2"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>

            <!-- Rechte Spalte: Zugeordnete MA + Actions -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Zugeordnete Mitarbeiter -->
                <Border Grid.Row="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Zugeordnete Mitarbeiter"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,12"/>

                        <ListView x:ConnectionId='5' Grid.Row="1"
                                                                                                      
                                  SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate                                              >
                                    <Grid x:ConnectionId='8' Padding="8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Name -->
                                        <TextBlock x:ConnectionId='9' Grid.Row="0" Grid.Column="0"
                                                                              
                                                   FontWeight="SemiBold"/>

                                        <!-- Remove Button -->
                                        <Button x:ConnectionId='10' Grid.Row="0" Grid.Column="1"
                                                Command="{Binding DataContext.RemoveMitarbeiterCommand, ElementName=Page}"
                                                                           
                                                Width="32" Height="32"
                                                Padding="0"
                                                Background="Transparent"
                                                ToolTipService.ToolTip="Mitarbeiter entfernen">
                                            <FontIcon Glyph="&#xE711;" FontSize="12" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                        </Button>

                                        <!-- Telefon -->
                                        <TextBlock x:ConnectionId='11' Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                                           
                                                   FontSize="11"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                        <!-- Zeiten -->
                                        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                   FontSize="11"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                            <Run x:ConnectionId='12'                        />
                                            <Run Text=" - "/>
                                            <Run x:ConnectionId='13'                       />
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,4"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <!-- Leeres State -->
                        <StackPanel x:ConnectionId='6' Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="8"
                                                                                                                                                                         >
                            <FontIcon Glyph="&#xE716;" FontSize="48" Foreground="{ThemeResource TextFillColorDisabledBrush}"/>
                            <TextBlock Text="Keine Mitarbeiter zugeordnet"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Spacing="8">
                    <Button x:ConnectionId='4'                                                                    
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            ToolTipService.ToolTip="Schnellauswahl für ausgewählte Schicht öffnen">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8B5;" FontSize="14"/>
                            <TextBlock Text="Schnellauswahl öffnen"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            </Grid>
        </Grid>
        </Grid>
    </Grid>
</Page>

