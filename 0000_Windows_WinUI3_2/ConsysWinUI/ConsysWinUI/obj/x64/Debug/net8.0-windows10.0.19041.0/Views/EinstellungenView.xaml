<Page x:ConnectionId='1'
    x:Class="ConsysWinUI.Views.EinstellungenView"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConsysWinUI.Views"
    xmlns:vm="using:ConsysWinUI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F0F0F0">

    <!-- Einstellungen - Access Original: frm_Einstellungen -->

    <Page.Resources>
        <!-- Access Original Styles: Label 165px, TextBox 202px, Button 139x23px -->

        <!-- Access TextBox Style -->
        <Style x:Key="AccessTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="BorderBrush" Value="#A6A6A6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Access ComboBox Style -->
        <Style x:Key="AccessComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="200"/>
            <Setter Property="BorderBrush" Value="#A6A6A6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="MinHeight" Value="23"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Access Button Style - 139x23px -->
        <Style x:Key="AccessButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="139"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="Background" Value="#95B3D7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#7A97BE"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <!-- Access Label Style - 165px -->
        <Style x:Key="AccessLabelStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="165"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="173"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

    </Page.Resources>

    <!-- Hauptgrid mit Sidebar -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185"/>  <!-- Sidebar - Access Original: 185px -->
            <ColumnDefinition Width="*"/>    <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- ============================================ -->
        <!-- SIDEBAR -->
        <!-- ============================================ -->
        <Border Grid.Column="0" Background="#8B0000">
            <StackPanel>
                <!-- Logo/Titel -->
                <Border Background="White" BorderBrush="Black" BorderThickness="1"
                        Margin="8,10" Padding="8,3">
                    <TextBlock Text="HAUPTMENU"
                               Foreground="Black"
                               FontWeight="Bold"
                               FontSize="11"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Menu-Buttons -->
                <Button Content="Dienstplanuebersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Planungsuebersicht" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Auftragsverwaltung" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Mitarbeiterstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Kundenstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Objektstamm" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Abwesenheiten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Zeitkonten" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Lohnabrechnungen" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Bewerber" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>
                <Button Content="Einstellungen" Background="#D4A574" Foreground="Black" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"/>

                <Border Height="1" Background="#666666" Margin="10,15"/>

                <Button x:ConnectionId='36' Content="Hauptmenue" Style="{StaticResource SidebarButtonStyle}" Margin="5,2"
                                                                                             />
            </StackPanel>
        </Border>

        <!-- ============================================ -->
        <!-- CONTENT AREA -->
        <!-- ============================================ -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <Grid Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>   <!-- Header -->
                    <RowDefinition Height="Auto"/>   <!-- Allgemein -->
                    <RowDefinition Height="Auto"/>   <!-- Darstellung -->
                    <RowDefinition Height="Auto"/>   <!-- Dienstplan -->
                    <RowDefinition Height="Auto"/>   <!-- Benachrichtigungen -->
                    <RowDefinition Height="Auto"/>   <!-- Export -->
                    <RowDefinition Height="Auto"/>   <!-- Wartung -->
                    <RowDefinition Height="Auto"/>   <!-- Info -->
                    <RowDefinition Height="Auto"/>   <!-- Aktionen -->
                </Grid.RowDefinitions>

                <!-- ============================================ -->
                <!-- HEADER -->
                <!-- ============================================ -->
                <Border Grid.Row="0" Background="#4A5568" Margin="-20,-20,-20,20" Padding="20,10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#808080" Width="28" Height="28" Margin="0,0,10,0">
                            <TextBlock Text="Zahn" FontSize="10" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Einstellungen" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- ALLGEMEIN -->
                <!-- ============================================ -->
                <Border Grid.Row="1" Background="White" BorderBrush="#D9D9D9" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Allgemein" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Anwendungstitel:" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='35' Grid.Column="1"                                                        Style="{StaticResource AccessTextBoxStyle}"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Datenbank-Pfad:" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='33' Grid.Column="1"                                                      Style="{StaticResource AccessTextBoxStyle}" Width="400" IsReadOnly="True"/>
                            <Button x:ConnectionId='34' Grid.Column="2" Content="..." Width="30" Height="23" Margin="5,0,0,0"
                                                                                                         />
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Backend-Pfad:" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='31' Grid.Column="1"                                                    Style="{StaticResource AccessTextBoxStyle}" Width="400" IsReadOnly="True"/>
                            <Button x:ConnectionId='32' Grid.Column="2" Content="..." Width="30" Height="23" Margin="5,0,0,0"
                                                                                                       />
                        </Grid>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Auto-Speichern:" Style="{StaticResource AccessLabelStyle}"/>
                            <CheckBox x:ConnectionId='29' Grid.Column="1"                                                      Content="Aktiviert" Margin="0,0,20,0"/>
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock Text="Intervall (Min):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <NumberBox x:ConnectionId='30'                                                           Minimum="1" Maximum="60" SpinButtonPlacementMode="Compact" Width="80"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- DARSTELLUNG -->
                <!-- ============================================ -->
                <Border Grid.Row="2" Background="White" BorderBrush="#D9D9D9" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Darstellung" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Design:" Style="{StaticResource AccessLabelStyle}"/>
                            <ComboBox x:ConnectionId='28' Grid.Column="1"
                                                                                                 
                                                                                                  
                                      Style="{StaticResource AccessComboBoxStyle}"/>
                        </Grid>

                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Schriftgroesse:" Style="{StaticResource AccessLabelStyle}"/>
                            <Button x:ConnectionId='25' Grid.Column="1" Content="-" Width="30" Height="23"
                                                                                                             />
                            <TextBlock x:ConnectionId='26' Grid.Column="2"                                                       Width="40" TextAlignment="Center" VerticalAlignment="Center"/>
                            <Button x:ConnectionId='27' Grid.Column="3" Content="+" Width="30" Height="23"
                                                                                                           />
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Kompakte Ansicht:" Style="{StaticResource AccessLabelStyle}"/>
                            <CheckBox x:ConnectionId='24' Grid.Column="1"                                                            />
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Sidebar eingeklappt:" Style="{StaticResource AccessLabelStyle}"/>
                            <CheckBox x:ConnectionId='23' Grid.Column="1"                                                               />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- DIENSTPLAN -->
                <!-- ============================================ -->
                <Border Grid.Row="3" Background="White" BorderBrush="#D9D9D9" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Dienstplan" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Standard-Ansicht (Tage):" Style="{StaticResource AccessLabelStyle}"/>
                            <NumberBox x:ConnectionId='22'                                                             Minimum="1" Maximum="31" SpinButtonPlacementMode="Compact" Width="80"/>
                        </Grid>

                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Wochenende markieren:" Style="{StaticResource AccessLabelStyle}"/>
                            <CheckBox x:ConnectionId='21' Grid.Column="1"                                                                />
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Feiertage markieren:" Style="{StaticResource AccessLabelStyle}"/>
                            <CheckBox x:ConnectionId='20' Grid.Column="1"                                                               />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- BENACHRICHTIGUNGEN -->
                <!-- ============================================ -->
                <Border Grid.Row="4" Background="White" BorderBrush="#D9D9D9" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Benachrichtigungen" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Benachrichtigungen:" Style="{StaticResource AccessLabelStyle}"/>
                            <CheckBox x:ConnectionId='19' Grid.Column="1"                                                                     Content="Aktiviert"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Sound-Effekte:" Style="{StaticResource AccessLabelStyle}"/>
                            <CheckBox x:ConnectionId='18' Grid.Column="1"                                                         />
                        </Grid>

                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="E-Mail-Benachrichtigung:" Style="{StaticResource AccessLabelStyle}"/>
                            <CheckBox x:ConnectionId='17' Grid.Column="1"                                                                    />
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="E-Mail-Adresse:" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='16' Grid.Column="1"                                                     Style="{StaticResource AccessTextBoxStyle}"
                                                                                                        />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- EXPORT -->
                <!-- ============================================ -->
                <Border Grid.Row="5" Background="White" BorderBrush="#D9D9D9" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Export/Import" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Export-Pfad:" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBox x:ConnectionId='14' Grid.Column="1"                                                   Style="{StaticResource AccessTextBoxStyle}" Width="400" IsReadOnly="True"/>
                            <Button x:ConnectionId='15' Grid.Column="2" Content="..." Width="30" Height="23" Margin="5,0,0,0"
                                                                                                      />
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Standard-Format:" Style="{StaticResource AccessLabelStyle}"/>
                            <ComboBox x:ConnectionId='13' Grid.Column="1"
                                                                                                 
                                                                                                         
                                      Style="{StaticResource AccessComboBoxStyle}"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Mit Kopfzeile:" Style="{StaticResource AccessLabelStyle}"/>
                            <CheckBox x:ConnectionId='12' Grid.Column="1"                                                               />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- WARTUNG -->
                <!-- ============================================ -->
                <Border Grid.Row="6" Background="White" BorderBrush="#D9D9D9" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Wartung" Style="{StaticResource SectionHeaderStyle}"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Button x:ConnectionId='9' Content="Datenbank reparieren" Style="{StaticResource AccessButtonStyle}" Margin="0,0,10,0"
                                                                                                        />
                            <Button x:ConnectionId='10' Content="Cache loeschen" Style="{StaticResource AccessButtonStyle}" Margin="0,0,10,0"
                                                                                                  />
                            <Button x:ConnectionId='11' Content="Logs anzeigen" Style="{StaticResource AccessButtonStyle}"
                                                                                                 />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- INFO -->
                <!-- ============================================ -->
                <Border Grid.Row="7" Background="#E8F4E8" BorderBrush="#D9D9D9" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Information" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Version:" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBlock x:ConnectionId='8' Grid.Column="1"                                                    FontWeight="SemiBold"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Letzte Synchronisation:" Style="{StaticResource AccessLabelStyle}"/>
                            <TextBlock x:ConnectionId='7' Grid.Column="1"                                                             />
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button x:ConnectionId='5' Content="Ueber CONSYS" Style="{StaticResource AccessButtonStyle}" Margin="0,0,10,0"
                                                                                          />
                            <Button x:ConnectionId='6' Content="Hilfe" Style="{StaticResource AccessButtonStyle}"
                                                                                          />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- AKTIONEN -->
                <!-- ============================================ -->
                <Border Grid.Row="8" Background="#F5F5F5" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:ConnectionId='2' Grid.Column="0" Text="Ungespeicherte Aenderungen" Foreground="#EF4444" FontWeight="SemiBold" VerticalAlignment="Center"
                                                                                                 />

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button x:ConnectionId='3' Content="Speichern" Style="{StaticResource AccessButtonStyle}" Margin="0,0,10,0" Background="#22C55E"
                                                                                                 />
                            <Button x:ConnectionId='4' Content="Zuruecksetzen" Style="{StaticResource AccessButtonStyle}"
                                                                                                 />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

